@using ProjectFirma.Web.Views.ProjectUpdate
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.ModalDialog
@using ProjectFirma.Web.Models
@inherits Manage

@{
    SetLayout("~/Views/Shared/SiteLayout.cshtml", ViewDataTyped);
}

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
}

@if (ViewDataTyped.ProjectsWithNoContactCount > 0)
{
    <p class="alert alert-danger" style="margin-top: 10px">There are @ViewDataTyped.ProjectsWithNoContactCount @FieldDefinition.Project.GetFieldDefinitionLabelPluralized() which require an update but do not have a @FieldDefinition.OrganizationPrimaryContact.GetFieldDefinitionLabel(). No reminders will be sent for these @FieldDefinition.Project.GetFieldDefinitionLabelPluralized().</p>
}
<div>
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<div class="panel panelFirma">
    <div class="panel-heading panelTitle">
        <h2>
            @*TODO: I'm pretty sure if you can see this page you're allowed to configure but I need to double check that.*@
            @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditProjectUpdateConfigurationUrl, "Edit Project Update Configuration", 950, true)
            Project Update Configuration
        </h2>
    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-5">
                        <label>Enable Project Update Reminders?</label>
                    </div>
                    <div class="col-xs-7">
                        NOPE
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5">
                        <label>Project Update Kick-Off Date</label>
                    </div>
                    <div class="col-xs-7">
                        January 1, 1900
                    </div>
                </div>
                <div class="row">

                    <div class="col-xs-5">
                        <label>Project Update Kick-Off Intro Content</label>
                    </div>
                    <div class="col-xs-7">
                        "It's time to update your projects!!!!!!!!!!!!!'"
                    </div>
                </div>
                <div class="row">

                    <div class="col-xs-5">
                        <label>Send Periodic Reminders?</label>
                    </div>
                    <div class="col-xs-7">
                        NOPE.
                    </div>
                </div>
                <div class="row">

                    <div class="col-xs-5">
                        <label>Project Update Reminder Interval</label>
                    </div>
                    <div class="col-xs-7">
                        N/A
                    </div>
                </div>
                <div class="row">

                    <div class="col-xs-5">
                        <label>Project Update Reminder Intro Content</label>
                    </div>
                    <div class="col-xs-7">
                        N/A
                    </div>
                </div>
                <div class="row">

                    <div class="col-xs-5">
                        <label>Send Close Out Notification?</label>
                    </div>
                    <div class="col-xs-7">
                        NOPE
                    </div>
                </div>
                <div class="row">

                    <div class="col-xs-5">
                        <label>Project Update Close Out Date</label>
                    </div>
                    <div class="col-xs-7">
                        January 19, 9001
                    </div>
                </div>
                <div class="row">

                    <div class="col-xs-5">
                        <label>Project Update Close Out Notification Intro Content</label>
                    </div>
                    <div class="col-xs-7">
                        N/A
                    </div>
                </div>
            </div>
        </div>    </div>
</div>

<div class="panel panelFirma">
    <div class="panel-heading panelTitle">
        <h2>@FieldDefinition.OrganizationPrimaryContact.GetFieldDefinitionLabelPluralized() Receiving Notification</h2>
    </div>
    <div class="panel-body">
        @Html.DhtmlxGrid(ViewDataTyped.PeopleReceivingReminderGridSpec, ViewDataTyped.PeopleReceivingReminderGridName, ViewDataTyped.PeopleReceivingReminderGridDataUrl, "height:350px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
    </div>
</div>

<div class="panel panelFirma">
    <div class="panel-heading panelTitle">
        <h2>@FieldDefinition.Project.GetFieldDefinitionLabel() Update Status</h2>
    </div>
    <div class="panel-body">
        @Html.DhtmlxGrid(ViewDataTyped.ProjectsRequiringUpdateGridSpec, ViewDataTyped.ProjectsRequiringUpdateGridName, ViewDataTyped.ProjectsRequiringUpdateGridDataUrl, "height:450px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
    </div>
</div>