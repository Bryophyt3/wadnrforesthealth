@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.Results.ParticipatingOrganizations

<div class="row">
    @foreach (var organizationGrouping in ViewDataTyped.Organizations.OrderByDescending(x => x.Count()).ThenBy(x => x.Key.OrganizationName))
    {
        <div class="col-xs-12 col-sm-4 list-group">
            <a href="@organizationGrouping.Key.GetDetailUrl()" class="list-group-item">
                <div class="row">
                    <div class="col-xs-5">
                        <figure style="text-align: center;">
                            @if (organizationGrouping.Key.LogoFileResource != null)
                            {
                                <img class="img-responsive" src="@organizationGrouping.Key.LogoFileResource.FileResourceUrl" style="max-width: 135px; max-height: 100px;" alt="Organization Logo">
                            }
                            else
                            {
                                <img class="img-responsive" src="@MultiTenantHelpers.GetTenantSquareLogoUrl()" style="max-width: 135px; max-height: 100px;" alt="Organization Logo">
                            }
                        </figure>
                    </div>
                    <div class="col-xs-7">
                        <h4 class="list-group-item-heading">@organizationGrouping.Key.OrganizationName</h4>
                        @{
                            var projectCount = organizationGrouping.Count();
                            var projectCountLabel = projectCount.Equals(1) ? FieldDefinition.Project.GetFieldDefinitionLabel() : FieldDefinition.Project.GetFieldDefinitionLabelPluralized();
                        }
                        <p class="list-group-item-text">
                            @projectCount @projectCountLabel
                        </p>
                    </div>
                </div>     
            </a>
        </div>
    }
</div>
