@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Results
@using ProjectFirma.Web.Views.PerformanceMeasure
@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@inherits ResultsByProgram

@section JavascriptAndStylesContent
{
    <script type="text/javascript">
        function reloadWithNewProgram(ddl)
        {
            var urlTemplate = new Sitka.UrlTemplate(@Html.Raw(ViewDataTyped.ResultsByProgramUrl.ToJS()));
            var newUrl = urlTemplate.ParameterReplace(ddl.value);
            document.location = newUrl;
        }
    </script>
}

<div>
    @ViewDataTyped.FirmaPage.FirmaPageContentHtmlString
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <span class="stylizeLikeTH">@Html.LabelWithFieldDefinitionFor(FieldDefinition.Program, 600):</span>
        </div>

        <div class="col-md-10">
            <select onchange="reloadWithNewProgram(this)">
                @foreach (var focusArea in ViewDataTyped.FocusAreas)
                {
                    <optgroup label="@focusArea.DisplayName">
                        @foreach (var program in focusArea.Programs.OrderBy(x => x.ProgramNumber))
                        {
                            <option value="@program.ProgramID" @((ViewDataTyped.SelectedProgram.ProgramID == program.ProgramID).ToSelectedOrEmpty())>@program.DisplayName</option>
                        }
                    </optgroup>
                }
            </select>
            <a style="white-space: nowrap" href="javascript:void(0)" onmouseover="ProjectFirma.Views.Methods.addHelpTooltipPopup(jQuery(this), @ViewDataTyped.SelectedProgram.DisplayName.ToJS(), @ViewDataTyped.SelectedProgram.DefinitionAndGuidanceUrl.ToJS(), 500)">About this program</a>
        </div>
    </div>
    @if (ViewDataTyped.SelectedProgram.AssociatedProgramsHtmlString != null)
    {
        <div class="row" style="margin-top: 10px">
            <div class="col-md-2">
                <span class="stylizeLikeTH">@Html.LabelWithFieldDefinitionFor(FieldDefinition.AssociatedPrograms):</span>
            </div>
            <div class="col-md-10">
                @Html.Raw(ViewDataTyped.SelectedProgram.AssociatedProgramsHtmlString)
            </div>
        </div>
    }
</div>
<hr/>
@foreach (var performanceMeasureChartViewData in ViewDataTyped.PerformanceMeasureChartViewDatas)
{
    PerformanceMeasureChart.RenderPartialView(Html, performanceMeasureChartViewData);
}