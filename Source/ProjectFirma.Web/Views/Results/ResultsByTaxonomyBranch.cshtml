@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Results
@using ProjectFirma.Web.Views.PerformanceMeasure
@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Views.Shared
@inherits ResultsByTaxonomyBranch

@section JavascriptAndStylesContent
{
    <script type="text/javascript">
        function reloadWithNewTaxonomyBranch(ddl)
        {
            var urlTemplate = new Sitka.UrlTemplate(@Html.Raw(ViewDataTyped.ResultsByTaxonomyBranchUrl.ToJS()));
            var newUrl = urlTemplate.ParameterReplace(ddl.value);
            document.location = newUrl;
        }
    </script>
}

<div>
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <span class="stylizeLikeTH">@Html.LabelWithSugarFor(FieldDefinition.TaxonomyBranch, LabelWithSugarForExtensions.DisplayStyle.HelpIconWithLabel)</span>
        </div>

        <div class="col-md-10">
            <select onchange="reloadWithNewTaxonomyBranch(this)">
                @foreach (var taxonomyTrunk in ViewDataTyped.TaxonomyTrunks)
                {
                    <optgroup label="@taxonomyTrunk.DisplayName">
                        @foreach (var taxonomyBranch in taxonomyTrunk.TaxonomyBranches.OrderBy(x => x.TaxonomyBranchName))
                        {
                            <option value="@taxonomyBranch.TaxonomyBranchID" @((ViewDataTyped.SelectedTaxonomyBranch.TaxonomyBranchID == taxonomyBranch.TaxonomyBranchID).ToSelectedOrEmpty())>@taxonomyBranch.DisplayName</option>
                        }
                    </optgroup>
                }
            </select>
        </div>
    </div>
</div>
<hr/>
@foreach (var performanceMeasureChartViewData in ViewDataTyped.PerformanceMeasureChartViewDatas)
{
    PerformanceMeasureChart.RenderPartialView(Html, performanceMeasureChartViewData);
}
