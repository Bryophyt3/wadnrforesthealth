@using ProjectFirma.Web.Models
@using LtInfo.Common.HtmlHelperExtensions
@using Newtonsoft.Json.Linq
@inherits ProjectFirma.Web.Views.PerformanceMeasureMonitoringProgram.EditPerformanceMeasureMonitoringPrograms
<script type="text/javascript">
    // <![CDATA[
    angular.module("ProjectFirmaApp").factory("angularModelAndViewData", function()
    {
        return {
            AngularModel: @Html.Raw(JObject.FromObject(Model)),
            AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped))
        };
    });
    angular.bootstrap(jQuery("#EditPerformanceMeasureMonitoringProgramsApp"), ["ProjectFirmaApp"]);
    // ]]>
</script>

<div class="validationError">
    @Html.ValidationSummary()
</div>

<div id="EditPerformanceMeasureMonitoringProgramsApp" ng-controller="MonitoringProgramController">
    Monitoring Program to Add:
    <select ng-model="MonitoringProgramToAdd" ng-options="monitoringProgram.MonitoringProgramName for monitoringProgram in filteredMonitoringPrograms()" style="width: 700px"></select>
    <button class="btn btn-xs btn-firma" type="button" ng-click="addRow()">Add</button>
    <table class="dialogFormLayout">
        <tr>
            <th></th>
            <th style="white-space: nowrap">@Html.LabelWithSugarFor(FieldDefinition.MonitoringProgram)</th>
        </tr>
        <tr ng-repeat="PerformanceMeasureMonitoringProgram in AngularModel.PerformanceMeasureMonitoringPrograms | orderBy:[getMonitoringProgramName]">
            <td>
                <span class="glyphicon glyphicon-trash blue" title="Remove row'" alt="Remove row" ng-click="deleteRow(PerformanceMeasureMonitoringProgram)" style="cursor: pointer"></span>
            </td>
            <td ng-bind="getMonitoringProgramName(PerformanceMeasureMonitoringProgram)"></td>
        </tr>
    </table>
    @using (Html.BeginForm())
    {
        <input ng-repeat="PerformanceMeasureMonitoringProgram in AngularModel.PerformanceMeasureMonitoringPrograms" type="hidden" name="@Html.NameFor(x => x.PerformanceMeasureMonitoringPrograms[0].PerformanceMeasureID).ToString().Replace("0", "{{$index}}")" value="{{PerformanceMeasureMonitoringProgram.PerformanceMeasureID}}">
        <input ng-repeat="PerformanceMeasureMonitoringProgram in AngularModel.PerformanceMeasureMonitoringPrograms" type="hidden" name="@Html.NameFor(x => x.PerformanceMeasureMonitoringPrograms[0].MonitoringProgramID).ToString().Replace("0", "{{$index}}")" value="{{PerformanceMeasureMonitoringProgram.MonitoringProgramID}}">
    }
</div>
