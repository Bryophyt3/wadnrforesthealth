@section RightOfPageTitle
{
    @if (ViewDataTyped.Project.GetLatestUpdateState() != ProjectUpdateState.Submitted && ViewDataTyped.Project.GetLatestUpdateState() != ProjectUpdateState.Returned)
    {
        if (ViewDataTyped.Project.IsUpdateAllowed && ViewDataTyped.UserHasProjectUpdatePermissions)
        {
            if (ViewDataTyped.Project.IsUpdateMandatory)
            {
                <a class="btn btn-firma" href="@ViewDataTyped.Project.GetProjectUpdateUrl()" title="Update Project">@DhtmlxGridHtmlHelpers.EditIconBootstrap Update Project</a>
            }
            else
            {
                @ModalDialogFormHelper.ModalDialogFormLink(string.Format("{0}Update Project", "<span class='glyphicon glyphicon-edit blue' style='margin-right:3px'></span>"), ViewDataTyped.ConfirmNonMandatoryUpdateUrl, "Update this project?", 400, "Continue", "Cancel", new List<string> {"btn", "btn-firma"}, null, null)
            }
        }
    }
    else
    {
        <a class="btn btn-firma" href="@ViewDataTyped.Project.GetProjectUpdateUrl()" title="Review Update">@DhtmlxGridHtmlHelpers.EditIconBootstrap Reivew Update</a>
    }
    @if (ViewDataTyped.Project.IsActiveProposal() && ViewDataTyped.CurrentPersonCanViewProposal)
    {
        switch (ViewDataTyped.Project.ProjectApprovalStatus.ToEnum)
        {
            case ProjectApprovalStatusEnum.Draft:
            case ProjectApprovalStatusEnum.Returned:
                <a class="btn btn-firma" href="@ViewDataTyped.ProposalBasicsUrl" title="Edit Proposal">@DhtmlxGridHtmlHelpers.EditIconBootstrap Edit Proposal</a>
                break;
            case ProjectApprovalStatusEnum.PendingApproval:
                <a class="btn btn-firma" href="@ViewDataTyped.ProposalBasicsUrl" title="Review Proposal">@DhtmlxGridHtmlHelpers.EditIconBootstrap Review Proposal</a>
                break;
        }
    }
    <a class="btn btn-firma" href="@ViewDataTyped.Project.GetFactSheetUrl()" title="View Fact Sheet">@FirmaDhtmlxGridHtmlHelpers.FactSheetIcon View Fact Sheet</a>
}


<div>
    @{
        var projectsUrl = ViewDataTyped.Project.IsActiveProposal() ? ViewDataTyped.FullProposalsListUrl : ViewDataTyped.FullProjectListUrl;
