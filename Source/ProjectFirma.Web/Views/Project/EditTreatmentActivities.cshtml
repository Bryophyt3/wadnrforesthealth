@using LtInfo.Common.BootstrapWrappers
@using Newtonsoft.Json
@using ProjectFirma.Web.Models
@using Newtonsoft.Json.Linq
@inherits ProjectFirma.Web.Views.Project.EditTreatmentActivities
<script src="@Url.Content("~/Views/Project/TreatmentActivityController.js")" type="text/javascript"></script>
<script type="text/javascript">
    // <![CDATA[
    angular.module("ProjectFirmaApp").factory("angularModelAndViewData", function()
    {
        return {
            @{
                // this is how you serialize dates in a way that angular can understand
                var jbytes = JObject.FromObject(Model);
                var json = jbytes.ToString(Formatting.None, new JsonSerializerSettings() {DateFormatString = "MM/dd/yyyy"});
            }
            AngularModel: @Html.Raw(json),
            AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular))
        };
    });
    angular.bootstrap(jQuery("#EditFundingSourceExpendituresApp"), ["ProjectFirmaApp"]);
    jQuery(".selectpicker").selectpicker("refresh");
    // ]]>
</script>

<div class="validationError">
    @Html.ValidationSummary()
</div>

<div class="row">
    <div class="col-sm-12">
        <div ng-app="ProjectFirmaApp" id="EditFundingSourceExpendituresApp" ng-controller="TreatmentActivityController">
            <div class="form-group">
                <label class="control-label">@FieldDefinition.FundingSource.GetFieldDefinitionLabel() to Add:</label>
                <div class="input-group">
                    <select ng-model="FundingSourceIDToAdd"
                            class="selectpicker"
                            data-live-search="true"
                            data-container="body"
                            title="Select a @FieldDefinition.FundingSource.GetFieldDefinitionLabel() to Add"
                            data-width="100%">
                        <option value="null" disabled selected>Select a @FieldDefinition.FundingSource.GetFieldDefinitionLabel() to Add</option>
                        <option ng-repeat="fundingSource in filteredFundingSources()"
                                value="{{fundingSource.FundingSourceID}}"
                                ng-selected="FundingSourceIDToAdd == fundingSource.FundingSourceID"
                                ng-bind="fundingSource.DisplayName"
                                data-tokens="{{fundingSource.DisplayName}}"></option>
                    </select>
                    <span class="input-group-btn">
                        <button class="btn btn-firma" type="button" ng-click="addFundingSource()">
                            <span class="glyphicon glyphicon-plus"></span> Add
                        </button>
                    </span>
                </div>
                <br />
            </div>


            <div ng-repeat="fundingSource in fundingSourcesWithActivities() | orderBy:[fundingSource.DisplayName]">
                <span class="glyphicon glyphicon-trash" title="Remove @FieldDefinition.FundingSource.GetFieldDefinitionLabel()" alt="Remove @FieldDefinition.FundingSource.GetFieldDefinitionLabel()" ng-click="deleteFundingSource(fundingSource)" style="cursor: pointer"></span>
                <label ng-bind="fundingSource.DisplayName"></label>

                <table class="table table-responsive"
                       style="padding-left: 18px; margin-bottom: 25px; display: block; overflow: auto; background-color: #f1f1f1">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Start Date <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>End Date</th>
                            <th>Footprint Acres <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Brush Control Acres <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Thinning Acres <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Pruning Acres <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Slash Acres <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Prescribed Burn Acres <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Allocated Amount <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Total Cost <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Grant Cost <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="treatmentActivity in treatmentActivitiesForFundingSource(fundingSource)">
                            <td>
                                <span class="glyphicon glyphicon-trash" title="Remove row" alt="Remove row" ng-if="!rowIsEmpty(treatmentActivity)" ng-click="deleteActivity(treatmentActivity)" style="cursor: pointer"></span>
                            </td>
                            <td>
                                <input ng-model="treatmentActivity.TreatmentActivityStartDate" type="text" class="sitkaDatePicker form-control" datetime="shortDate" datetime-model="shortDate" />
                            </td>
                            <td>
                                <input ng-model="treatmentActivity.TreatmentActivityEndDate" type="text" class="sitkaDatePicker form-control" />
                            </td>
                            
                            <td><input ng-model="treatmentActivity.TreatmentActivityFootprintAcres" type="number" class="form-control" /></td>
                            <td><input ng-model="treatmentActivity.TreatmentActivityBrushControlAcres" type="number" class="form-control" /></td>
                            <td><input ng-model="treatmentActivity.TreatmentActivityThinningAcres" type="number" class="form-control" /></td>
                            <td><input ng-model="treatmentActivity.TreatmentActivityPruningAcres" type="number" class="form-control" /></td>
                            <td><input ng-model="treatmentActivity.TreatmentActivitySlashAcres" type="number" class="form-control" /></td>
                            <td><input ng-model="treatmentActivity.TreatmentActivityPrescribedBurnAcres" type="number" class="form-control" /></td>
                            <td><input ng-model="treatmentActivity.TreatmentActivityAllocatedAmount" type="number" class="form-control" /></td>
                            <td><input ng-model="treatmentActivity.TreatmentActivityTotalCost" type="number" class="form-control" /></td>
                            <td><input ng-model="treatmentActivity.TreatmentActivityGrantCost" type="number" class="form-control" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            @using (Html.BeginForm())
            {
                <div ng-repeat="treatmentActivity in nonBlankActivities() | orderBy:[getFundingSourceName]">
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityID).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityID}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].ProjectID).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.ProjectID}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].FundingSourceID).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.FundingSourceID}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityStartDate).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityStartDate}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityEndDate).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityEndDate}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityNotes).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityNotes}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityFootprintAcres).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityFootprintAcres}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityBrushControlAcres).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityBrushControlAcres}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityThinningAcres).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityThinningAcres}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityPruningAcres).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityPruningAcres}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivitySlashAcres).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivitySlashAcres}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityPrescribedBurnAcres).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityPrescribedBurnAcres}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityAllocatedAmount).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityAllocatedAmount}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityTotalCost).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityTotalCost}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.TreatmentActivities[0].TreatmentActivityGrantCost).ToString().Replace("0", "{{$index}}")" value="{{treatmentActivity.TreatmentActivityGrantCost}}" />
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <span><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</span>
                    </div>
                    <div class="col-sm-6 text-right">
                        <button class="btn btn-firma" type="submit">Save</button>
                        <a class="btn btn-firma" href="@ViewDataTyped.ProjectUrl#activities">Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



<script src="@Url.Content("~/Content/angular/directives/datetime.js")" type="text/javascript"></script>