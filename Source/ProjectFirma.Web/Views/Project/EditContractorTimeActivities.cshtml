@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using Newtonsoft.Json
@using ProjectFirma.Web.Models
@using Newtonsoft.Json.Linq
@inherits ProjectFirma.Web.Views.Project.EditContractorTimeActivities
<script src="@Url.Content("~/Views/Project/ContractorTimeActivityController.js")" type="text/javascript"></script>
<script type="text/javascript">
    // <![CDATA[
    angular.module("ProjectFirmaApp").factory("angularModelAndViewData", function()
    {
        return {
            @{
                // this is how you serialize dates in a way that angular can understand
                var jbytes = JObject.FromObject(Model);
                var json = jbytes.ToString(Formatting.None, new JsonSerializerSettings() {DateFormatString = "MM/dd/yyyy"});
            }
            AngularModel: @Html.Raw(json),
            AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular))
        };
    });
    angular.bootstrap(jQuery("#EditFundingSourceExpendituresApp"), ["ProjectFirmaApp"]);
    jQuery(".selectpicker").selectpicker("refresh");
    // ]]>
</script>

<div class="validationError">
    @Html.ValidationSummary()
</div>

<div class="row">
    <div class="col-sm-12">
        <div ng-app="ProjectFirmaApp" id="EditFundingSourceExpendituresApp" ng-controller="ContractorTimeActivityController">
            <div class="row">
                <div class="col-sm-2"><strong>Staff Time Hours:</strong></div>
                <div class="col-sm-2 text-right">
                    <span>
                        {{ getOverallTotalHours() }}
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2"><strong>Total Cost:</strong></div>
                <div class="col-sm-2 text-right">
                    <span>
                        {{ getOverallTotalAmount() | currency:"$" }}
                    </span>
                </div>
            </div>
            
            <hr/>

            <div class="form-group">
                <label class="control-label">@FieldDefinition.FundingSource.GetFieldDefinitionLabel() to Add:</label>
                <div class="input-group">
                    <select ng-model="FundingSourceIDToAdd"
                            class="selectpicker"
                            data-live-search="true"
                            data-container="body"
                            title="Select a @FieldDefinition.FundingSource.GetFieldDefinitionLabel() to Add"
                            data-width="100%">
                        <option value="null" disabled selected>Select a @FieldDefinition.FundingSource.GetFieldDefinitionLabel() to Add</option>
                        <option ng-repeat="fundingSource in filteredFundingSources()"
                                value="{{fundingSource.FundingSourceID}}"
                                ng-selected="FundingSourceIDToAdd == fundingSource.FundingSourceID"
                                ng-bind="fundingSource.DisplayName"
                                data-tokens="{{fundingSource.DisplayName}}"></option>
                    </select>
                    <span class="input-group-btn">
                        <button class="btn btn-firma" type="button" ng-click="addFundingSource()">
                            <span class="glyphicon glyphicon-plus"></span> Add
                        </button>
                    </span>
                </div>
                <br />
            </div>
            <div ng-repeat="fundingSource in fundingSourcesWithActivities() | orderBy:[fundingSource.DisplayName]">
                <span class="glyphicon glyphicon-trash" title="Remove @FieldDefinition.FundingSource.GetFieldDefinitionLabel()" alt="Remove @FieldDefinition.FundingSource.GetFieldDefinitionLabel()" ng-click="deleteFundingSource(fundingSource)" style="cursor: pointer"></span>
                <label ng-bind="fundingSource.DisplayName"></label>

                <table class="table table-responsive"
                       style="padding-left: 18px; margin-bottom: 25px; display: block; overflow: auto; background-color: #f1f1f1">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Start Date <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>End Date</th>
                            <th>Acreage <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Hours <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Rate <sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup></th>
                            <th>Notes</th>
                            <th class="text-right">Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="contractorTimeActivity in contractorTimeActivitiesForFundingSource(fundingSource)">
                            <td>
                                <span class="glyphicon glyphicon-trash" title="Remove row" alt="Remove row" ng-if="!rowIsEmpty(contractorTimeActivity)" ng-click="deleteActivity(contractorTimeActivity)" style="cursor: pointer"></span>
                            </td>
                            <td>
                                <input ng-model="contractorTimeActivity.ContractorTimeActivityStartDate" type="text" class="sitkaDatePicker form-control" datetime="shortDate" datetime-model="shortDate" />
                            </td>
                            <td>
                                <input ng-model="contractorTimeActivity.ContractorTimeActivityEndDate" type="text" class="sitkaDatePicker form-control" />
                            </td>
                            <td>
                                <input ng-model="contractorTimeActivity.ContractorTimeActivityAcreage" type="number" class="form-control text-right" style="padding-right:2px" />
                            </td>
                            <td>
                                <input ng-model="contractorTimeActivity.ContractorTimeActivityHours" type="number" class="form-control text-right" style="padding-right:2px" />
                            </td>
                            <td>
                                <input ng-model="contractorTimeActivity.ContractorTimeActivityRate" type="text" class="sitkaCurrency form-control text-right" ng-currency />
                            </td>
                            <td>
                                <input ng-model="contractorTimeActivity.ContractorTimeActivityNotes" class="form-control" />
                            </td>
                            <td class="text-right">
                                <span ng-bind="getTotalAmountForActivity(contractorTimeActivity) | currency:'$'"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            @using (Html.BeginForm())
            {
                <div ng-repeat="contractorTimeActivity in nonBlankActivities() | orderBy:[getFundingSourceName]">
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].ContractorTimeActivityID).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.ContractorTimeActivityID}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].ProjectID).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.ProjectID}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].FundingSourceID).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.FundingSourceID}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].ContractorTimeActivityStartDate).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.ContractorTimeActivityStartDate}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].ContractorTimeActivityEndDate).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.ContractorTimeActivityEndDate}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].ContractorTimeActivityHours).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.ContractorTimeActivityHours}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].ContractorTimeActivityAcreage).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.ContractorTimeActivityAcreage}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].ContractorTimeActivityRate).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.ContractorTimeActivityRate}}" />
                    <input type="hidden" name="@Html.NameFor(x => x.ContractorTimeActivities[0].ContractorTimeActivityNotes).ToString().Replace("0", "{{$index}}")" value="{{contractorTimeActivity.ContractorTimeActivityNotes}}" />
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <span><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</span>
                    </div>
                    <div class="col-sm-6 text-right">
                        <button class="btn btn-firma" type="submit">Save</button>
                        <a class="btn btn-firma" href="@ViewDataTyped.ProjectUrl#activities">Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



<script src="@Url.Content("~/Content/angular/directives/datetime.js")" type="text/javascript"></script>