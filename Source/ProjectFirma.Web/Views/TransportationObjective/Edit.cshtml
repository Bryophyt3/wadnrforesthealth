@using LtInfo.Common.HtmlHelperExtensions
@inherits ProjectFirma.Web.Views.TransportationObjective.Edit
@using (Html.BeginForm())
{
    <table class="dialogFormLayout">
        <tr>
            <th style="white-space: nowrap">@Html.LabelWithFieldDefinitionFor(m => m.TransportationObjectiveName):</th>
            <td>
                @Html.TextBoxFor(m => m.TransportationObjectiveName, new {style = "width:522px"})
                @Html.ValidationMessageFor(m => m.TransportationObjectiveName)
            </td>
        </tr>
        <tr>
            <th>@Html.LabelWithFieldDefinitionFor(m => m.TransportationStrategyID):</th>
            <td>
                @if (ViewDataTyped.HasProjects)
                {
                    @ViewDataTyped.TransportationStrategyDisplayName
                    @Html.HiddenFor(x => x.TransportationStrategyID)
                }
                else
                {
                    @Html.DropDownListFor(m => m.TransportationStrategyID, ViewDataTyped.TransportationStrategies, new {style = "width:522px"})
                    @Html.ValidationMessageFor(m => m.TransportationStrategyID)
                }
            </td>
        </tr>
        <tr>
            <th>@Html.LabelWithFieldDefinitionFor(m => m.FundingTypeID):</th>
            <td>
                @Html.DropDownListFor(m => m.FundingTypeID, ViewDataTyped.FundingTypes, new {style = "width:300px"})
                @Html.ValidationMessageFor(m => m.FundingTypeID)
            </td>
        </tr>
    </table>
    @Html.HiddenFor(m => m.TransportationObjectiveID)
}