@using ProjectFirma.Web.Views.GisProjectBulkUpdate
@inherits SourceOrganizationTypeSelection

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div>
        Select the source organization for your gis upload:
    </div>
    <div class="form-group">
        
        @foreach (var sourceOrganization in ViewDataTyped.GisUploadSourceOrganizations)
        {
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.SourceOrganizationID, sourceOrganization.GisUploadSourceOrganizationID)
                    <strong>@sourceOrganization.Program.GdbImportDisplayName</strong>
                </label>
            </div>
        }
        
    </div>
}
