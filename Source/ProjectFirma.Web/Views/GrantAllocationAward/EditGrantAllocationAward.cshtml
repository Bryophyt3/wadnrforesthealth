@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.Models
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Controllers
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.ProgramIndex
@using ProjectFirma.Web.Views.ProjectCode
@inherits ProjectFirma.Web.Views.GrantAllocationAward.EditGrantAllocationAward



@Html.ValidationSummary()


@using (Html.BeginForm("New", "GrantAllocationAward", FormMethod.Post))
{

    @Html.HiddenFor(m => m.GrantAllocationAwardID)
    @Html.HiddenFor(m => m.FocusAreaID)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.GrantAllocationAwardName)
            </div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.GrantAllocationAwardName, new { @class = "form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.GrantAllocationAwardName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.GrantAllocationID)
            </div>
            <div class="col-sm-9">
                @Html.SearchableDropDownListFor(m => m.GrantAllocationID, ViewDataTyped.AvailableGrantAllocations, new { @class = "form-control selectpicker", style = "width:auto" })
                @Html.ValidationMessageFor(m => m.GrantAllocationID)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.GrantAllocationAwardAmount)
            </div>
            <div class="col-sm-9">
                @Html.EditorFor(m => m.GrantAllocationAwardAmount, new { @class = "form-control", style = "width:auto" })
                @Html.ValidationMessageFor(m => m.GrantAllocationAwardAmount)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.GrantAllocationAwardExpirationDate)
            </div>
            <div class="col-sm-9">
                @Html.EditorFor(m => m.GrantAllocationAwardExpirationDate, new { @class = "form-control", style = "width:auto" })
            </div>
        </div>
    </div>

}



