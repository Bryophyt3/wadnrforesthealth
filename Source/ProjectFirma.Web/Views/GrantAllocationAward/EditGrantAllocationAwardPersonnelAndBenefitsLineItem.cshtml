@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Controllers
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.ProgramIndex
@using ProjectFirma.Web.Views.ProjectCode
@inherits ProjectFirma.Web.Views.GrantAllocationAward.EditGrantAllocationAwardPersonnelAndBenefitsLineItem



    @Html.ValidationSummary()


    @using (Html.BeginForm())
    {

        @Html.HiddenFor(m => m.GrantAllocationAwardPersonnelAndBenefitsLineItemID)
        @Html.HiddenFor(m => m.GrantAllocationAwardID)

        <div class="form-horizontal">
            <div class="form-group">
