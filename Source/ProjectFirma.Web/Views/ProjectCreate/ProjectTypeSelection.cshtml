@using ProjectFirma.Web.Views.ProjectCreate
@using ProjectFirma.Web.Models
@inherits ProjectTypeSelection

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div>
        Do you want to:
    </div>
    <div class="form-group">
        <div class="radio">
            <label>
                @Html.RadioButtonFor(m => m.CreateType, ProjectTypeSelectionViewModel.ProjectCreateType.Application)
                <strong>Add an application for a future @FieldDefinition.Project.GetFieldDefinitionLabel()</strong>
            </label>
            <div class="radioExplanationText">This will create a new @FieldDefinition.Project.GetFieldDefinitionLabel() in the Application stage. When an application is reviewed and selected for implementation an administrator can advance the @FieldDefinition.Project.GetFieldDefinitionLabel() to the Planned stage.</div>
        </div>
        <div class="radio" style="margin-top: 10px;">
            <label>
                @Html.RadioButtonFor(m => m.CreateType, ProjectTypeSelectionViewModel.ProjectCreateType.Existing)
                <strong>Enter an existing @FieldDefinition.Project.GetFieldDefinitionLabel() that is already underway or complete</strong>
            </label>
            <div class="radioExplanationText">This will create a new @FieldDefinition.Project.GetFieldDefinitionLabel() record for an existing @FieldDefinition.Project.GetFieldDefinitionLabel(). You will be asked to select the @FieldDefinition.Project.GetFieldDefinitionLabel() stage (e.g. Planned, Implementation, or Complete). An administrator will review the @FieldDefinition.Project.GetFieldDefinitionLabel() before it becomes publicly visible.</div>
        </div>
    </div>
}
