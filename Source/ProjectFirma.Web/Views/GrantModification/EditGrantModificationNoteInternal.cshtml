@using LtInfo.Common.HtmlHelperExtensions
@inherits ProjectFirma.Web.Views.GrantModification.EditGrantModificationNoteInternal

@Html.Raw(ViewDataTyped.EditGrantModificationNoteInternalType.IntroductoryText)

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-xs-2 control-label">
                @Html.LabelWithSugarFor(m => m.GrantModificationNoteInternalText, "Note")
            </div>
            <div class="col-xs-10">
                @Html.TextAreaFor(m => m.GrantModificationNoteInternalText, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GrantModificationNoteInternalText)
            </div>
        </div>

    </div>
    @Html.HiddenFor(m => m.GrantModificationID)
    @Html.HiddenFor(m => m.GrantModificationNoteInternalID)
}
