@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Vendor
@inherits ProjectFirma.Web.Views.DNRUplandRegion.EditContact

@using (Html.BeginForm())
{
    // This is not actually being used in the edit, only used to help with Validator needing access to the region being edited. --SLG
    @Html.HiddenFor(m => m.RegionID)


    @Html.ValidationSummary()
    <div class="form-horizontal">

        <div class="form-group row">
            <div class="col-xs-4 fieldLabel text-right">@Html.LabelWithSugarFor(m => m.Address)</div>
            <div class="col-xs-8">@Html.TextBoxFor(m => m.Address, new { @class = "form-control", style = "width:auto;"})</div>
        </div>
        <div class="form-group row">
            <div class="col-xs-4 fieldLabel text-right">@Html.LabelWithSugarFor(m => m.City)</div>
            <div class="col-xs-8">@Html.TextBoxFor(m => m.City, new {@class = "form-control", style = "width:auto;"})</div>
        </div>
        <div class="form-group row">
            <div class="col-xs-4 fieldLabel text-right">@Html.LabelWithSugarFor(m => m.State)</div>
            <div class="col-xs-8">@Html.TextBoxFor(m => m.State, new { @class = "form-control", style = "width:auto;"})</div>
        </div>
        <div class="form-group row">
            <div class="col-xs-4 fieldLabel text-right">@Html.LabelWithSugarFor(m => m.Zip)</div>
            <div class="col-xs-8">@Html.TextBoxFor(m => m.Zip, new { @class = "form-control", style = "width:auto;"})</div>
        </div>
        <div class="form-group row">
            <div class="col-xs-4 fieldLabel text-right">@Html.LabelWithSugarFor(m => m.Phone)</div>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", style = "width:auto;", id = "Phone" })
                @Html.ValidationMessageFor(m => m.Phone)
                </div>
        </div>
        <div class="form-group row">
            <div class="col-xs-4 fieldLabel text-right">@Html.LabelWithSugarFor(m => m.Email)</div>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width:100%;" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
    </div>
}

<script src="@Url.Content("~/Content/JQuery/jquery.mask.min.js")"></script>
<script type="text/javascript">
    jQuery(function() {
        jQuery("#Phone").mask("(000) 000-0000");
    })
</script>
