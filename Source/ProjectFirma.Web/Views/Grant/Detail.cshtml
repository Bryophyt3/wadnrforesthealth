@using LtInfo.Common
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Models
@using LtInfo.Common.ModalDialog
@inherits ProjectFirma.Web.Views.Grant.Detail

@section JavascriptAndStylesContent
{
    

    <script type="text/javascript" src="/Content/Bootstrap-select/bootstrap-select.min.js"></script>
    <link href="~/Content/bootstrap-tags/bootstrap-tags.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/Content/Bootstrap-select/bootstrap-select.min.css" type="text/css" />
    <script src="@Url.Content("~/Content/bootstrap-toc/bootstrap-toc.min.js")" type="text/javascript"></script>
}

<style type="text/css">

    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }

     
</style>

<div>
    <a class="btn backButton" style="padding-left: 0;" href="@ViewDataTyped.GrantsListUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") @ViewDataTyped.BackToGrantsText</a>
</div>



        <div class="col-sm-12 col-md-9 col-lg-10">
            <div class="row">
                <div class="col-sm-12" style="padding: 0px;">
                    <div class="panel panelFirma">
                        <div class="panel-heading panelTitle">
                            <h3>
                                @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditGrantUrl, string.Format("Edit {0}", ViewDataTyped.Grant.GrantTitle), 950, ViewDataTyped.UserHasEditGrantPermissions)
                                Basics
                            </h3>
                        </div>
                        <div class="panel-body">
                            <div class="basicsLayout">
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.GrantName)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="Name">@ViewDataTyped.Grant.GrantName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.GrantShortName)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="ShortName">@ViewDataTyped.Grant.ShortName</span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.Organization)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="Organization">@ViewDataTyped.Grant.Organization.OrganizationName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.GrantStatus)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="Status">@ViewDataTyped.Grant.GrantStatus.GrantStatusName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.GrantType)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="Type">@ViewDataTyped.Grant.GrantTypeDisplay</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.GrantNumber)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="GrantNumber">@ViewDataTyped.Grant.GrantNumber</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.TotalAwardAmount)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="TotalAwardAmount">@ViewDataTyped.Grant.AwardedFunds.ToStringCurrency()</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.GrantStartDate)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="StartDate">@ViewDataTyped.Grant.StartDateDisplay</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.LabelWithSugarFor(FieldDefinition.GrantEndDate)
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="EndDate">@ViewDataTyped.Grant.EndDateDisplay</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            
            <div class="row">
                <div class="col-sm-12" style="padding: 0px;">
                    <div class="panel panelFirma">
                        <div class="panel-heading panelTitle">
                            <h3>
                                @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.NewGrantNoteUrl, string.Format("Add new note for {0}", ViewDataTyped.Grant.GrantTitle), 950, ViewDataTyped.UserHasEditGrantPermissions)
                                Notes
                            </h3>
                        </div>
                        <div class="panel-body">
                            <div class="basicsLayout">

                                @foreach (var grantNote in ViewDataTyped.Grant.GrantNotes.OrderByDescending(n => n.CreatedDate))
                                {
                                    <div class="row">
                                        @ModalDialogFormHelper.MakeEditIconLink(grantNote.GetEditNoteUrl(ViewDataTyped.Grant), string.Format("Edit this note created by {0} on {1}", grantNote.CreatedByPerson.FullNameFirstLast, grantNote.CreatedDate), 950, ViewDataTyped.UserHasEditGrantPermissions)
                                        @ModalDialogFormHelper.MakeDeleteLink(BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-trash gi-1x blue", "Delete").ToString(), grantNote.GetDeleteNoteUrl(ViewDataTyped.Grant), new List<string>(), ViewDataTyped.UserHasEditGrantPermissions)
                                        @Html.Raw(grantNote.LastUpdatedDate != null ? string.Empty : "<strong>")
                                        @string.Format("Created on {0} by {1}", grantNote.CreatedDate, grantNote.CreatedByPerson.FullNameFirstLast)
                                        @Html.Raw(grantNote.LastUpdatedDate != null ? string.Empty : @"</strong>")
                                        @Html.Raw(grantNote.LastUpdatedDate != null ? string.Format(" -- <strong>Last updated on {0} by {1}</strong>", grantNote.LastUpdatedDate, grantNote.LastUpdatedByPerson.FullNameFirstLast) : string.Empty)
                                    </div>
                                    <div class="row">
                                        @grantNote.GrantNoteText
                                    </div>
                                }



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

