@using LtInfo.Common.BootstrapWrappers
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Project
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.DhtmlWrappers
@using ProjectFirma.Web.Views.Grant
@using ProjectFirma.Web.Views.ProjectCreate
@inherits ProjectFirma.Web.Views.Grant.GrantIndex

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
}


<div style="padding-top: 10px;">
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<div style="margin-top: 10px">
    
    @* Grant Grid *@
    <h3>Grants</h3>
    @Html.DhtmlxGrid(ViewDataTyped.GrantGridSpec, ViewDataTyped.GrantGridName, ViewDataTyped.GrantGridDataUrl, null, DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)

    <br />

    @* Grant Allocation Grid *@
    <h3>Grant Allocations</h3>
    @Html.DhtmlxGrid(ViewDataTyped.GrantAllocationGridSpec, ViewDataTyped.GrantAllocationGridName, ViewDataTyped.GrantAllocationGridDataUrl, null, DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)
</div>

<script type="text/javascript">
    // <![CDATA[
    jQuery(document).ready(function()
    {
        //console.log('jQuery Document Ready');
        var grantGrid = Sitka.@ViewDataTyped.GrantGridName;
        grantGrid.grid.attachEvent("onRowSelect", function (rowId)
        {
            //console.log('grantGrid onRowSelect');
            var grantNumberColumnIndex = grantGrid.getColumnIndexByName('@GrantGridSpec.GrantNumberHiddenColumnName');
            var currentSelectedGrantNumber = grantGrid.grid.cells(rowId, grantNumberColumnIndex).getValue();
            //console.log('grantNumberColumnIndex: ' + grantNumberColumnIndex);
            //console.log('currentSelectedGrantNumber: ' + currentSelectedGrantNumber);
            var grantAllocationGrid = Sitka.@ViewDataTyped.GrantAllocationGridName;
            grantAllocationGrid.grid.filterBy(grantNumberColumnIndex, currentSelectedGrantNumber);
            var grantNumberFilter = grantAllocationGrid.grid.getFilterElement(grantNumberColumnIndex);
            grantNumberFilter.value = currentSelectedGrantNumber;
        });
        grantGrid.grid.attachEvent("onXLE", function() { grantGrid.grid.selectRow(0, true); });
        grantGrid.grid.attachEvent("onFilterEnd", function() { grantGrid.grid.selectRow(0, true); });
    });
    // ]]>

</script>