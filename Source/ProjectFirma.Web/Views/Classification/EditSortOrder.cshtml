@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.Mvc
@inherits ProjectFirma.Web.Views.Classification.EditSortOrder

<script src="~/Content/Sortable.js"></script>

<span class="systemText">Drag and drop the @ViewDataTyped.ClassificationSystemNamePlural to set their sorting order.</span><hr/>
<div id="classifications-list">
    @foreach (var classification in ViewDataTyped.Classifications.OrderBy(x => x.ClassificationSortOrder).ToArray())
    {
        <div data-id="@classification.ClassificationID"><span class="glyphicon glyphicon-menu-hamburger"></span>
            @classification.DisplayName
        </div>
    }
</div>

@using (Html.BeginForm())
{
    
}

<script>
    //var sortableClassifications = null;
    jQuery(document).ready(function () {
        var list = document.getElementById("classifications-list");
        var sortableClassifications = Sortable.create(list,
            {
                handle: ".glyphicon-menu-hamburger"
            });

        jQuery('#ltinfo-modal-dialog-save-button-id').click(function() {
            var idArray = sortableClassifications.toArray();
            var form = jQuery("form");
            for (var i = 0; i < idArray.length; i++) {
                jQuery("<input type='hidden' name='@(Html.NameFor(m=>m.ReorderedClassificationIDs))["+i+"]' value=" + idArray[i] + " />").appendTo(form);
            }
        });
    })
</script>