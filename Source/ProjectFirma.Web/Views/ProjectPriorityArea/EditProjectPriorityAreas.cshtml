@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.ProjectPriorityArea
@inherits EditProjectPriorityAreas

<script type="text/javascript" src="@Url.Content("~/Views/ProjectPriorityArea/EditProjectPriorityAreasController.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/typeahead/typeahead.min.js")"></script>
<script type="text/javascript">
    // <![CDATA[
    angular.module("ProjectFirmaApp").factory("angularModelAndViewData",
        function() {
            return {
                "AngularModel": @Html.Raw(JObject.FromObject(Model).ToString(Formatting.None)),
                "AngularViewData":
                    @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular).ToString(Formatting.None))
            };
        });
    angular.bootstrap(jQuery("[ng-controller=\"EditProjectPriorityAreasController\"]"), ["ProjectFirmaApp"]);
    // ]]>
</script>
<style>
    #@ViewDataTyped.ViewDataForAngular.MapInitJson.MapDivID {
        height: 500px;
        margin: 0;
    }

    .firma-modal .modal-body {
        overflow-y: visible;
    }
</style>
<div class="row">
    <div class="col-xs-12">
        <p>
            Select one or more priority areas to associate with this @FieldDefinition.Project.GetFieldDefinitionLabel().ToLower().
            You can select priority areas by clicking on the map or searching by priority area name.
            If your @FieldDefinition.Project.GetFieldDefinitionLabel().ToLower() is not associated with any priority area, please provide an explanation in the @Html.DisplayNameFor(m => m.NoPriorityAreasExplanation).ToString().ToLower() field.
        </p>
    </div>
</div>

@Html.ValidationSummary()
<div class="row" ng-app="ProjectFirmaApp" ng-controller="EditProjectPriorityAreasController">
    <div class="col-xs-12 col-md-4">
        <form action="@ViewDataTyped.EditProjectPriorityAreasUrl" method="POST" id="@ViewDataTyped.EditProjectPriorityAreasFormID">
            <div class="input-group" id="scrollable-dropdown-menu" style="margin-bottom: 10px;">
                @* ReSharper disable once UnknownCssClass *@
                <input type="text"
                       id="@ViewDataTyped.ViewDataForAngular.TypeAheadInputId"
                       class="typeahead form-control"
                       placeholder="Search by priority area name"
                       autocomplete="off" />
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default" id="@string.Format("{0}Button", ViewDataTyped.ViewDataForAngular.TypeAheadInputId)" ng-click="selectFirstSuggestionFunction()">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
            <div class="alert alert-warning" ng-if="!AngularModel.PriorityAreaIDs || AngularModel.PriorityAreaIDs.length < 1">
                No priority areas selected for this @FieldDefinition.Project.GetFieldDefinitionLabel(), provide an explanation in the @Html.DisplayNameFor(m => m.NoPriorityAreasExplanation) field or select a priority area.
            </div>
            <div ng-if="AngularModel.PriorityAreaIDs.length >= 1">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Priority Area Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="priorityAreaId in AngularModel.PriorityAreaIDs">
                            <td>
                                <input type="hidden" name="@Html.NameFor(x => x.PriorityAreaIDs)" value="{{priorityAreaId}}" />
                                <a ng-click="togglePriorityArea(priorityAreaId)">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </a>
                            </td>
                            <td ng-bind="getPriorityAreaName(priorityAreaId)"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(m => m.NoPriorityAreasExplanation)</label>
                    <textarea class="form-control" style="resize: none;" name="@Html.NameFor(m => m.NoPriorityAreasExplanation)"
                              ng-model="AngularModel.@Html.NameFor(m => m.NoPriorityAreasExplanation)"></textarea>
                    @Html.ValidationMessageFor(m => m.NoPriorityAreasExplanation)
                </div>
            </div>
            
        </form>
    </div>
    <div class="col-xs-12 col-sm-8">
        <div id="mapContainer">
            <div id="@ViewDataTyped.ViewDataForAngular.MapInitJson.MapDivID"></div>
        </div>
        @if (ViewDataTyped.HasProjectLocationPoint || ViewDataTyped.HasProjectLocationDetail)
        {
            <div>
                <img style="margin-top: 10px; margin-right: 5px;" src="@ViewDataTyped.SimplePointMarkerImg"> Simple and/or Detailed @FieldDefinition.Project.GetFieldDefinitionLabel() location (for reference)
            </div>
        }        
    </div>

</div>