@using ProjectFirma.Web.Views.Tenant
@inherits Edit

@using (@Html.BeginForm())
{
<div class="form-horizontal">
    @Html.HiddenFor(m => m.TenantID)
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.PrimaryContactID)</div>
        <div class="col-md-8">
            <select id="@Html.IdFor(m => m.PrimaryContactID)" name="@Html.NameFor(m => m.PrimaryContactID)"
                    class="selectpicker" title="Select person for primary contact."
                    data-live-search="true" data-live-search-placeholder="First Last - Organization">
                @foreach (var person in ViewDataTyped.TenantPeople)
                {
                    <option value="@person.PersonID" data-tokens="@person.FullNameFirstLast">
                        @person.FullNameFirstLast
                    </option>
                }
            </select>
            @Html.ValidationMessageFor(x => x.PrimaryContactID)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.TaxonomySystemName)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.TaxonomySystemName, new Dictionary<string, object> {{"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.TaxonomySystemName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.TaxonomyTierOneDisplayNameForProject)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.TaxonomyTierOneDisplayNameForProject, new Dictionary<string, object> {{"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.TaxonomyTierOneDisplayNameForProject)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.PerformanceMeasureDisplayName)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.PerformanceMeasureDisplayName, new Dictionary<string, object> {{"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.PerformanceMeasureDisplayName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.ClassificationDisplayName)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.ClassificationDisplayName, new Dictionary<string, object> {{"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.ClassificationDisplayName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.TenantSquareLogoUrl)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.TenantSquareLogoUrl, new Dictionary<string, object> {{"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.TenantSquareLogoUrl)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.TenantBannerLogoUrl)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.TenantBannerLogoUrl, new Dictionary<string, object> {{"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.TenantBannerLogoUrl)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.NumberOfTaxonomyTiersToUse)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.NumberOfTaxonomyTiersToUse, new Dictionary<string, object> {{"type", "number"}, {"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.NumberOfTaxonomyTiersToUse)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.MinimumYear)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.MinimumYear, new Dictionary<string, object> {{"type", "number"}, {"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.MinimumYear)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 text-right">@Html.LabelFor(m => m.TenantStyleSheetUrl)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.TenantStyleSheetUrl, new Dictionary<string, object> {{"class", "form-control"}, {"style", "width:auto;"}})
            @Html.ValidationMessageFor(m => m.TenantStyleSheetUrl)
        </div>
    </div>
</div>
}

<script type="text/javascript" language="javascript">
    // <![CDATA[
    jQuery(".selectpicker").selectpicker("refresh");
    // ]]>
</script>
