@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.ModalDialog
@using ProjectFirma.Web.Views.Tenant
@inherits Detail

<div>
    <a class="btn backButton" href="@ViewDataTyped.IndexUrl">
        @BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left")
        Back to all Tenants
    </a>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                @ModalDialogFormHelper.MakeLtInfoEditIconLink(ViewDataTyped.EditUrl, string.Format("Edit Tenant: {0}", ViewDataTyped.Tenant.TenantName), 800, ViewDataTyped.UserHasTenantManagePermissions)
                Basics
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Tenant Name</div>
                    <div class="col-xs-7">@ViewDataTyped.Tenant.TenantName</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Tenant</div>
                    <div class="col-xs-7">@ViewDataTyped.Tenant.TenantDomain</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Primary Contact</div>
                    <div class="col-xs-7">@ViewDataTyped.PrimaryContactLink</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                Attributes
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Taxonomy System Name</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.TaxonomySystemName</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Taxonomy Tier One Display Name For Project</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.TaxonomyTierOneDisplayNameForProject</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Performance Measure Display Name</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.PerformanceMeasureDisplayName</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Classification Display Name</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.ClassificationDisplayName</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Tenant Square Logo Url</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.TenantSquareLogoUrl</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Tenant Banner Logo Url</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.TenantBannerLogoUrl</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Number Of Taxonomy Tiers To Use</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.NumberOfTaxonomyTiersToUse</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Minimum Year</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.MinimumYear</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Tenant Style Sheet Url</div>
                    <div class="col-xs-7">@ViewDataTyped.TenantAttribute.TenantStyleSheetUrl</div>
                </div>
            </div>
        </div>
    </div>
</div>
