@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.ProjectControls
@using ProjectFirma.Web.Views.Shared.ProjectLocationControls
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.PerformanceMeasure
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.TaxonomyTierTwo.Summary

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }

    <style>
        #@ViewDataTyped.ProjectLocationsMapInitJson.MapDivID
        {
            height: 360px;
        }

        .chartWrapper
        {
            border: 2px black solid;
            box-shadow: 0 2px 2px 0;
        }

    </style>
}

<div class="tableLayout">
    <div class="tableCell">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>@ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditTaxonomyTierTwoUrl, string.Format("Edit {0} - {1}", MultiTenantHelpers.GetTaxonomyTierTwoDisplayName(), ViewDataTyped.TaxonomyTierTwo.DisplayName), ViewDataTyped.UserHasTaxonomyTierTwoManagePermissions) Basics</h2>
            </div>
            <div class="panel-body">
                <span class="stylizeLikeTH">Category:</span>
                @{ ProjectTaxonomy.RenderPartialView(Html, ViewDataTyped.ProjectTaxonomyViewData); }
            </div>
        </div>

        <div class="panel panelFirma">
            <h2>@ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditDescriptionUrl, string.Format("Edit Description - {0}", ViewDataTyped.TaxonomyTierTwo.DisplayName), ViewDataTyped.UserHasTaxonomyTierTwoManagePermissions) Description</h2>
            <div class="panel-body">
                <div>
                    @ViewDataTyped.TaxonomyTierTwo.TaxonomyTierTwoDescriptionHtmlString
                </div>
            </div>
        </div>

        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>@MultiTenantHelpers.GetTaxonomyTierTwoDisplayName() Projects Map</h2>
            </div>
            <div style="padding: 10px">
                To zoom into a specific area, hold down the Shift key and drag a rectangle.
                <div style="border-radius: 8px; background-color: white; margin: 5px 0 5px 0">
                    @{ ProjectLocationsMap.RenderPartialView(Html, ViewDataTyped.ProjectLocationsMapViewData); }
                </div>
                Some projects operate over larger areas and are not represented on the map, but are listed in the project grid below. A <a href="@ViewDataTyped.ProjectMapFilteredUrl">full-screen, filterable version of this map</a> is also available.
            </div>
        </div>

        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    <a href="@ViewDataTyped.ManageTaxonomyTierOneIndexUrl">@MultiTenantHelpers.GetTaxonomyTierOneDisplayNamePluralized()</a>
                </h2>
            </div>
            <div class="panel-body">
                @if (ViewDataTyped.TaxonomyTierTwo.TaxonomyTierOnes.Any())
                {
                    <table class="summaryLayout">
                        <tr>
                            <th>@Html.LabelWithFieldDefinitionFor(FieldDefinition.TaxonomyTierOne, LabelForExtensions.DisplayStyle.HelpIconWithLabel, MultiTenantHelpers.GetTaxonomyTierOneDisplayName())</th>
                        </tr>
                        @foreach (var taxonomyTierOne in ViewDataTyped.TaxonomyTierTwo.TaxonomyTierOnes)
                        {
                            <tr>
                                <td>
                                    @taxonomyTierOne.GetDisplayNameAsUrl()
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p class="alert">No @MultiTenantHelpers.GetTaxonomyTierOneDisplayNamePluralized() set for this @MultiTenantHelpers.GetTaxonomyTierTwoDisplayName().</p>
                }
            </div>
        </div>


        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    <a href="@ViewDataTyped.ManagePerformanceMeasuresUrl">Performance Measures</a>
                </h2>
            </div>
            <div class="panel-body">
                @if (ViewDataTyped.TaxonomyTierTwoPerformanceMeasures.Any())
                {
                    <table class="summaryLayout">
                        <tr>
                            <th>@Html.LabelWithFieldDefinitionFor(FieldDefinition.PerformanceMeasure)</th>
                        </tr>
                        @foreach (var performanceMeasure in ViewDataTyped.TaxonomyTierTwoPerformanceMeasures.OrderBy(x => x.PerformanceMeasureID))
                        {
                            <tr>
                                <td>
                                    @performanceMeasure.GetDisplayNameAsUrl()
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p class="alert">No performance measures set for this taxonomyTierTwo.</p>
                }
            </div>
        </div>
    </div>
    <div class="tableCell" style="width: 620px; padding-top: 20px">
        @foreach (var performanceMeasureChartViewData in ViewDataTyped.PerformanceMeasureChartViewDatas)
        {
            PerformanceMeasureChart.RenderPartialView(Html, performanceMeasureChartViewData);
        }
    </div>
</div>

<div class="panel panelFirma">
    <div class="panel-heading panelTitle">
        <h2>
            <a href="@ViewDataTyped.FullProjectListUrl">Projects</a>
        </h2>
    </div>
    <div class="panel-body">
        @Html.DhtmlxGrid(ViewDataTyped.BasicProjectInfoGridSpec, ViewDataTyped.BasicProjectInfoProjectGridName, ViewDataTyped.BasicProjectInfoProjectGridDataUrl, "height:300px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
    </div>
</div>

<div style="margin-top: 20px">
    <a class="btn btn-sm btn-firma" href="@ViewDataTyped.BackUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Index</a>
</div>

<script type="text/javascript">
    jQuery(document).ready(function()
    {
        var projectLocationsMapInitJson = @Html.Raw(JObject.FromObject(ViewDataTyped.ProjectLocationsMapInitJson).ToString(Formatting.None));
        var map = new ProjectFirmaMaps.Map(projectLocationsMapInitJson);
        map.initializeProjectLocations(projectLocationsMapInitJson);
    });
</script>