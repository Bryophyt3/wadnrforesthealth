@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.TaxonomyTierTwo.Edit
              
<link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.TaxonomyTierTwoName, MultiTenantHelpers.GetTaxonomyTierTwoDisplayName())</div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.TaxonomyTierTwoName)
                @Html.ValidationMessageFor(m => m.TaxonomyTierTwoName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.TaxonomyTierThreeID, MultiTenantHelpers.GetTaxonomyTierThreeDisplayName())</div>
            <div class="col-sm-9">
                @if (ViewDataTyped.HasProjects)
                {
                    @ViewDataTyped.TaxonomyTierThreeDisplayName
                    @Html.HiddenFor(x => x.TaxonomyTierThreeID)
                }
                else
                {
                    @Html.DropDownListFor(m => m.TaxonomyTierThreeID, ViewDataTyped.TaxonomyTierThrees)
                    @Html.ValidationMessageFor(m => m.TaxonomyTierThreeID)
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.TaxonomyTierTwoDescription)</div>
            <div class="col-sm-9">
                @Html.TextAreaWithMaxLengthFor(m => m.TaxonomyTierTwoDescription, new TextAreaForExtensions.TextAreaDimensions(null, 4), null)
                @Html.ValidationMessageFor(m => m.TaxonomyTierTwoDescription)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(x => x.ThemeColor, "Theme Color")
            </div>
            <div class="col-sm-9">
                <div id="themeColorPicker" class="input-group colorpicker-component">
                    @Html.TextBoxFor(x => x.ThemeColor, new { @class = "form-control" })
                    <span class="input-group-addon"><i></i></span>
                    @Html.ValidationMessageFor(x => x.ThemeColor)
                </div>
            </div>
        </div>

    </div>
    @Html.HiddenFor(m => m.TaxonomyTierTwoID)
}

<script type="text/javascript">
    jQuery(document).ready(function () { jQuery("#themeColorPicker").colorpicker(); });
</script>
