@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using LtInfo.Common.Mvc
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.Invoice.EditInvoiceLineItem
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-4 control-label">
            @Html.LabelWithSugarFor(m => m.CostTypeID)
        </div>
        <div class="col-sm-8">
            @Html.DropDownListFor(m => m.CostTypeID, ViewDataTyped.CostTypes, new { @class = "form-control", style = "width:auto" })
            @Html.ValidationMessageFor(m => m.CostTypeID)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 control-label">
            @Html.LabelWithSugarFor(m => m.GrantID)
        </div>
        <div class="col-sm-8">
            @Html.DropDownListFor(m => m.GrantID, ViewDataTyped.Grants, new { @class = "form-control", style = "width:auto" })
            @Html.ValidationMessageFor(m => m.GrantID)
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-4 control-label">
            @Html.LabelWithSugarFor(m => m.InvoiceLineItemAmount)
        </div>
        <div class="col-xs-8">
            @Html.EditorFor(m => m.InvoiceLineItemAmount)
            @Html.ValidationMessageFor(m => m.InvoiceLineItemAmount)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-xs-4 control-label">
            @Html.LabelWithSugarFor(m => m.InvoiceLineItemNote, "Note")
        </div>
        <div class="col-xs-8">
            @Html.TextAreaFor(m => m.InvoiceLineItemNote, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.InvoiceLineItemNote)
        </div>
    </div>

</div>
    @Html.HiddenFor(m => m.InvoiceLineItemID)
    @Html.HiddenFor(m => m.InvoiceID)
}
