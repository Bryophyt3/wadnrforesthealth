@using LtInfo.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Security
@using ProjectFirma.Web.Views.Results
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using MoreLinq
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Views.PerformanceMeasure
@inherits ProjectFirma.Web.Views.Organization.Detail

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
    <script src="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.css")" rel="stylesheet" type="text/css"/>
    <script type="text/javascript">
        jQuery(function() {
            var runOnceResults = false,
                runOnceFundingAndProjects = false;
            jQuery("#resultsTab").on("shown.bs.tab", function() {
                if (!runOnceResults) {
                    _.forOwn(GoogleCharts.chartWrappers,
                        function(chartWrapper) {
                            chartWrapper.getChart().clearChart();
                            chartWrapper.getChart().draw(chartWrapper.getDataTable());
                        });
                }
                runOnceResults = true;
            });
            jQuery("#fundingAndProjectsTab").on("shown.bs.tab", function() {
                if (!runOnceFundingAndProjects) {
                    var gridName = @(ViewDataTyped.ProjectOrganizationsGridName.ToJS().ToHTMLFormattedString());
                    Sitka[gridName].resizeGridWidths();
                }
                runOnceFundingAndProjects = true;
            });
        });
    </script>
}

<div>
    <a class="btn backButton" href="@ViewDataTyped.IndexUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Back to all @FieldDefinition.Organization.GetFieldDefinitionLabelPluralized()</a>
</div>

<div class="container-fluid">
    <div class="row">
        <ul class="nav nav-tabs" id="organizationDetailsTabs"style="border-bottom: none;">
            <li class="active">
                <a href="#organizationOverview" aria-controls="organizationOverview" role="tab" data-toggle="tab">Overview</a>
            </li>
            <li>
                <a href="#fundingAndProjects" aria-controls="fundingAndProjects" role="tab" data-toggle="tab" id="fundingAndProjectsTab">Funding &amp; @FieldDefinition.Project.GetFieldDefinitionLabelPluralized()</a>
            </li>
            <li>
                <a href="#results" aria-controls="results" role="tab" data-toggle="tab" id="resultsTab">Results</a>
            </li>
        </ul>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body tabPaneBody">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="organizationOverview">
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditOrganizationUrl, string.Format("Edit {0} - {1}", FieldDefinition.Organization.GetFieldDefinitionLabel(), ViewDataTyped.Organization.DisplayName), ViewDataTyped.UserHasOrganizationManagePermissions) Basics
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-5 fieldLabel text-right">@Html.Label("Name")</div>
                                    <div class="col-xs-7">@ViewDataTyped.Organization.OrganizationName</div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-5 fieldLabel text-right">@Html.Label("Short Name")</div>
                                    <div class="col-xs-7">@ViewDataTyped.Organization.OrganizationShortName</div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-5 fieldLabel text-right">@Html.LabelWithSugarFor(FieldDefinition.OrganizationType)</div>
                                    <div class="col-xs-7">@(ViewDataTyped.Organization.OrganizationType != null ? ViewDataTyped.Organization.OrganizationType.OrganizationTypeName : string.Empty)</div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-5 fieldLabel text-right">@Html.LabelWithSugarFor(FieldDefinition.PrimaryContact)</div>
                                    <div class="col-xs-7">@(new UserViewFeature().HasPermission(ViewDataTyped.CurrentPerson, ViewDataTyped.Organization.PrimaryContactPerson).HasPermission ? ViewDataTyped.Organization.PrimaryContactPersonWithOrgAsUrl : ViewDataTyped.Organization.PrimaryContactPersonAsStringAndOrgAsUrl)</div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-5 fieldLabel text-right">@Html.Label("Home Page")</div>
                                    <div class="col-xs-7"><a href="@ViewDataTyped.Organization.OrganizationUrl">@ViewDataTyped.Organization.OrganizationUrl</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditOrganizationUrl, string.Format("Edit Basics - {0}", ViewDataTyped.Organization.DisplayName), ViewDataTyped.UserHasOrganizationManagePermissions) Logo
                            </div>
                            <div class="panel-body">
                                @if (ViewDataTyped.Organization.LogoFileResource != null)
                                {
                                    <div style="width: 100%; text-align: center;">
                                        <img src="@ViewDataTyped.Organization.LogoFileResource.FileResourceUrl" style="max-width: 200px; max-height: 200px; margin-left: auto; margin-right: auto;" />
                                    </div>
                                }
                                else
                                {
                                    <p>No logo uploaded for this @FieldDefinition.Organization.GetFieldDefinitionLabelPluralized()</p>
                                }
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @FieldDefinition.ProjectLocation.GetFieldDefinitionLabelPluralized() and Boundary
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="pull-right">
                                            @if (ViewDataTyped.UserHasOrganizationManagePermissions)
                                            {
                                                <a href="@ViewDataTyped.EditBoundaryUrl" title="Edit Organization Boundary" class="btn btn-firma">
                                                    @BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-edit blue")
                                                    Edit Boundary
                                                </a>
                                                if (ViewDataTyped.Organization.OrganizationBoundary != null)
                                                {
                                                    @ModalDialogFormHelper.MakeDeleteLink(string.Format("{0} Delete Boundary", BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-trash")), ViewDataTyped.DeleteOrganizationBoundaryUrl, new List<string> { "btn", "btn-firma" }, ViewDataTyped.UserHasOrganizationManagePermissions)
                                                }
                                            }
                                        </div>
                                        @if (ViewDataTyped.HasSpatialData)
                                        {
                                            <p>
                                                This map displays any the location of any @FieldDefinition.Project.GetFieldDefinitionLabelPluralized() and boundaries associated with this @FieldDefinition.Organization.GetFieldDefinitionLabel().
                                            </p>
                                        }
                                        else
                                        {
                                            <p>No spatial data associated with this @FieldDefinition.Organization.GetFieldDefinitionLabel().</p>
                                        }
                                    </div>
                                    <div class="col-xs-12">
                                        @if (ViewDataTyped.HasSpatialData)
                                        {
                                            <div id="@ViewDataTyped.MapInitJson.MapDivID" style="height: 600px; margin: 5px 0 5px 0">
                                            </div>
                                            <span class="alert" style="font-size: 12px">To zoom, hold down Shift and drag a rectangle.</span>
                                            <script type="text/javascript">
                                                jQuery(document).ready(function() {
                                                    var mapInitJson =
                                                        @Html.Raw(JObject.FromObject(ViewDataTyped.MapInitJson).ToString(Formatting.None));
                                                    var map = new ProjectFirmaMaps.Map(mapInitJson);

                                                    var legend = new L.Control.Legend({
                                                        position: 'topleft',
                                                        collapsed: false,
                                                        controlButton: {
                                                            title: "Legend"
                                                        }
                                                    });

                                                    map.map.addControl(legend);
                                                    $(".legend-container").append($("#legend"));
                                                });
                                            </script>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                Users
                            </div>
                            <div class="panel-body">
                                @if (ViewDataTyped.Organization.People.Any())
                                {
                                    <ul>
                                        @foreach (var person in ViewDataTyped.Organization.People.Where(x => x.IsActive).OrderBy(x => x.FullNameLastFirst))
                                        {
                                            if (new UserViewFeature().HasPermission(ViewDataTyped.CurrentPerson, person).HasPermission)
                                            {
                                                <li>
                                                    @person.GetFullNameFirstLastAsUrl()
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    @person.FullNameFirstLast
                                                </li>
                                            }
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <div class="alert" role="alert">No Users belong to this @FieldDefinition.Organization.GetFieldDefinitionLabel().</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="fundingAndProjects">
                <div class="row">
                    <div class="col-md-4">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @Html.LabelWithSugarFor(FieldDefinition.FundingSource, LabelWithSugarForExtensions.DisplayStyle.HelpIconOnly)
                                <a href="@ViewDataTyped.ManageFundingSourcesUrl">@FieldDefinition.FundingSource.GetFieldDefinitionLabelPluralized()</a>
                                
                                <span class="pull-right">
                                    @if (ViewDataTyped.CanCreateNewFundingSource)
                                    {
                                        @ModalDialogFormHelper.ModalDialogFormLink(BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-plus").ToString(), ViewDataTyped.NewFundingSourceUrl, string.Format("Create a new {0}", FieldDefinition.FundingSource.GetFieldDefinitionLabel()), new List<string>())
                                    }
                                </span>
                            </div>
                            <div class="panel-body">
                                @if (ViewDataTyped.Organization.FundingSources.Any())
                                {
                                    <ul>
                                        @foreach (var fundingSource in ViewDataTyped.Organization.FundingSources.OrderBy(x => x.FundingSourceName))
                                        {
                                            <li>
                                                @fundingSource.DisplayNameAsUrl
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <div class="alert">No @FieldDefinition.FundingSource.GetFieldDefinitionLabelPluralized() set for this @FieldDefinition.Organization.GetFieldDefinitionLabel().</div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @FieldDefinition.ReportedExpenditure.GetFieldDefinitionLabelPluralized() by @FieldDefinition.FundingSource.GetFieldDefinitionLabel()
                            </div>
                            <div class="panel-body">
                                <div>
                                    @{ CalendarYearExpendituresLineChart.RenderPartialView(Html, ViewDataTyped.CalendarYearExpendituresLineChartViewData); }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @FieldDefinition.Project.GetFieldDefinitionLabelPluralized()
                            </div>
                            <div class="panel-body">
                                @Html.DhtmlxGrid(ViewDataTyped.ProjectsIncludingLeadImplementingGridSpec, ViewDataTyped.ProjectOrganizationsGridName, ViewDataTyped.ProjectOrganizationsGridDataUrl, string.Format("height:300px; width:{0}px;", ViewDataTyped.ProjectsIncludingLeadImplementingGridSpec.CalculateTotalColumnWidth()), DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="results">
                @if (ViewDataTyped.PerformanceMeasureChartViewDatas.Any())
                {
                    foreach (var batch in ViewDataTyped.PerformanceMeasureChartViewDatas.Batch(2))
                    {
                        <div class="row">
                            @foreach (var performanceMeasureChartViewData in batch)
                            {
                                <div class="col-xs-12 col-sm-6">
                                    <div class="panel panelFirma">
                                        <div class="panel-body">
                                            <div style="width: 500px; margin: auto;">
                                                @{ PerformanceMeasureChart.RenderPartialView(Html, performanceMeasureChartViewData); }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="row">
                        <div class="col-xs-12">
                            <p class="text-center">
                                There are no @FieldDefinition.PerformanceMeasure.GetFieldDefinitionLabelPluralized() to report for this @FieldDefinition.Organization.GetFieldDefinitionLabel().
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
