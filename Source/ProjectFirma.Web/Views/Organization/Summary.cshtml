@using ProjectFirma.Web.Areas.ParcelTracker.Controllers
@using ProjectFirma.Web.Areas.ParcelTracker.Views.Shared
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Security
@using ProjectFirma.Web.Areas.EIP.Views.Results
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using LtInfo.Common.Views
@using MoreLinq
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@inherits ProjectFirma.Web.Views.Organization.Summary

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
    <script src="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.css")" rel="stylesheet" type="text/css" />
}

<div class="container-fluid">
    <ul class="nav nav-tabs" id="organizationDetailsTabs">
        <li class="active"><a href="#organizationOverview" aria-controls="organizationOverview" role="tab" data-toggle="tab">Overview</a></li>
        <li><a href="#eipFundingAndProjects" aria-controls="eipFundingAndProjects" role="tab" data-toggle="tab">EIP Funding &amp; Projects</a></li>
        @if (ViewDataTyped.Organization.IsLeadAgency)
        {
            <li><a href="#parcelsAndCommodityTransactions" aria-controls="parcelsAndCommodityTransactions" role="tab" data-toggle="tab">Development Right Transactions</a></li>
            if (ViewDataTyped.Organization.LeadAgency.CanManageRightOfWayCoverage)
            {
                <li><a href="#rightOfWay" aria-controls="rightOfWay" role="tab" data-toggle="tab">Right Of Way Coverage</a></li>
            }
        }
    </ul>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="organizationOverview">
                <div class="row">
                    <div class="col-md-12">
                        <div class="summarySection">
                            <h2>@ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditOrganizationUrl, string.Format("Edit Organization - {0}", ViewDataTyped.Organization.DisplayName), ViewDataTyped.UserHasOrganizationManagePermissions) Basics</h2>
                            <div class="contentWrapper">
                                <div class="col-md-6" style="margin-bottom: 15px;">
                                    <table class="summaryLayout">
                                        <tr>
                                            <th style="white-space: nowrap">@Html.LabelWithFieldDefinitionFor(FieldDefinition.OrganizationName):</th>
                                            <td>
                                                @ViewDataTyped.Organization.OrganizationName
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>@Html.LabelWithFieldDefinitionFor(FieldDefinition.OrganizationAbbreviation):</th>
                                            <td>
                                                @ViewDataTyped.Organization.OrganizationAbbreviation
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>@Html.LabelWithFieldDefinitionFor(FieldDefinition.Sector):</th>
                                            <td>
                                                @ViewDataTyped.Organization.Sector.SectorDisplayName
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>@Html.LabelWithFieldDefinitionFor(FieldDefinition.PrimaryContact):</th>
                                            <td>
                                                @(new UserViewFeature().HasPermissionByPerson(ViewDataTyped.CurrentPerson) ? ViewDataTyped.Organization.PrimaryContactPersonWithOrgAsUrl : ViewDataTyped.Organization.PrimaryContactPersonAsStringAndOrgAsUrl)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>@Html.LabelWithFieldDefinitionFor(FieldDefinition.OrganizationUrl, "Home Page"):</th>
                                            <td>
                                                <a href="@ViewDataTyped.Organization.OrganizationUrl">@ViewDataTyped.Organization.OrganizationUrl</a>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <div style="width: 100%; text-align: center;">
                                        @if (ViewDataTyped.Organization.LogoFileResource != null)
                                        {
                                            <img src="@ViewDataTyped.Organization.LogoFileResource.FileResourceUrl" style="max-width: 200px; max-height: 200px; margin-left: auto; margin-right: auto;" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="summarySection">
                            <h2>Map</h2>
                            <div class="contentWrapper">
                                <div class="contentWrapper">
                                    @if (@ViewDataTyped.HasSpatialData)
                                    {
                                        <span>This map displays any EIP Projects, Development Right Transfers, and jurisdictional boundaries associated with this organiztion.</span>

                                        <div id="legend" style="padding: 10px; box-shadow: 0 1px 5px rgba(0, 0, 0, 0.65);">
                                            <div>
                                                <span style="font-weight: bold">EIP Projects</span>
                                                <div style="margin-left: 10px">
                                                    <div><span class="glyphicon glyphicon-map-marker" style="color:#3366ff"></span>Lead Implementer</div>
                                                    <div><span class="glyphicon glyphicon-map-marker" style="color:#99b3ff"></span>Funder and/or Implementer</div>
                                                </div>
                                            </div>
                                            <div>
                                                @{ Html.RenderRazorSitkaPartial<ParcelAndTransactionsLegend, ParcelAndTransactionsLegendViewData>(ViewDataTyped.ParcelAndTransactionsLegendViewData); }
                                            </div>
                                        </div>

                                        <div id="@ViewDataTyped.MapInitJson.MapDivID" style="height: 600px; margin: 5px 0 5px 0">
                                        </div>
                                        <span class="systemText" style="font-size: 12px">To zoom into a specific area, hold down the Shift key and drag a rectangle.</span>
                                    }
                                    else
                                    {
                                        <span class="systemText">No spatial data associated with this organization.</span>
                                    }

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-sm-12">
                        <div class="summarySection">
                            <h2>Users</h2>
                            <div class="contentWrapper">
                                @if (ViewDataTyped.Organization.People.Any())
                                {
                                    <table class="summaryLayout">
                                        @foreach (var batchPeople in ViewDataTyped.Organization.People.Where(x => x.IsActive).OrderBy(x => x.FullNameLastFirst).Batch(3))
                                        {
                                            <tr>
                                                @foreach (var person in batchPeople.OrderBy(x => x.FullNameLastFirst))
                                                {
                                                    <td>
                                                        @if (new UserViewFeature().HasPermissionByPerson(ViewDataTyped.CurrentPerson))
                                                        {
                                                            @person.GetFullNameFirstLastAsUrl()
                                                        }
                                                        else
                                                        {
                                                            @person.FullNameFirstLast
                                                        }
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </table>
                                }
                                else
                                {
                                    <span class="systemText">No Users belong to this organization.</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <div class="summarySection">
                            <h2>Monitoring Programs</h2>
                            <div class="contentWrapper">
                                @if (ViewDataTyped.Organization.MonitoringProgramPartners.Any())
                                {
                                    <table class="summaryLayout">
                                        @foreach (var monitoringProgram in ViewDataTyped.Organization.MonitoringProgramPartners.Select(x => x.MonitoringProgram).OrderBy(x => x.MonitoringProgramName))
                                        {
                                            <tr>
                                                <td>
                                                    @monitoringProgram.DisplayNameAsUrl
                                            </td>
                                        </tr>
                                        }
                                    </table>
                                }
                                else
                                {
                                    <span class="systemText">No monitoring programs for this organization.</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="eipFundingAndProjects">
                <div class="row">
                    <div class="col-md-4">
                        <div class="summarySection" style="height: 500px">
                            <h2>
                                @Html.LabelWithFieldDefinitionFor(FieldDefinition.FundingSource, LabelForExtensions.DisplayStyle.HelpIconOnly) <a href="@ViewDataTyped.ManageFundingSourcesUrl">Funding Sources</a>
                            </h2>
                            <div class="contentWrapper">
                                @if (ViewDataTyped.Organization.FundingSources.Any())
                                {
                                    <table class="table table-condensed">
                                        @foreach (var fundingSource in ViewDataTyped.Organization.FundingSources.OrderBy(x => x.FundingSourceName))
                                        {
                                            <tr>
                                                <td>@fundingSource.DisplayNameAsUrl</td>
                                            </tr>
                                        }
                                    </table>
                                }
                                else
                                {
                                    <span class="systemText">No funding sources set for this organization.</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="summarySection" style="height: 500px">
                            <h2>Reported Expenditures by Funding Source</h2>
                            <div class="contentWrapper">
                                <div style="border-radius: 8px; background-color: white; height: 410px; margin-right: auto; margin-left: auto; width: 600px">
                                    @{ CalendarYearExpendituresLineChart.RenderPartialView(Html, ViewDataTyped.CalendarYearExpendituresLineChartViewData); }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="summarySection">
                    <h2>Projects</h2>
                    <div class="contentWrapper">
                        @Html.DhtmlxGrid(ViewDataTyped.ProjectOrganizationsGridSpec, ViewDataTyped.ProjectOrganizationsGridName, ViewDataTyped.ProjectOrganizationsGridDataUrl, "height:300px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
                    </div>
                </div>
            </div>

            @if (ViewDataTyped.Organization.IsLeadAgency)
            {
                <div role="tabpanel" class="tab-pane" id="parcelsAndCommodityTransactions">
                    @if (ViewDataTyped.Organization.LeadAgency.LeadAgencyTransactionTypeCommodities.Any())
                    {
                        <div class="row">
                            <div class="summarySection">
                                <h2>Transactions</h2>
                                <div class="contentWrapper">
                                    @Html.DhtmlxGrid(ViewDataTyped.LeadAgencyDetailsViewData.TdrTransactionsGridSpec, ViewDataTyped.LeadAgencyDetailsViewData.TdrTransactionsGridName, ViewDataTyped.LeadAgencyDetailsViewData.TdrTransactionsGridDataUrl, "height:300px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
                                </div>
                            </div>
                        </div>
                    }
                    <div class="summarySection">
                        <h2>Pools</h2>
                        <div class="contentWrapper">
                            @if (ViewDataTyped.Organization.LeadAgency.IsJurisdiction && ViewDataTyped.Organization.LeadAgency.Organization.Jurisdiction.CommodityPools.Any())
                            {
                                @Html.DhtmlxGrid(ViewDataTyped.LeadAgencyDetailsViewData.CommodityPoolGridSpec, ViewDataTyped.LeadAgencyDetailsViewData.CommodityPoolGridName, ViewDataTyped.LeadAgencyDetailsViewData.CommodityPoolGridDataUrl, "height: 250px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
                            }
                            else
                            {
                                <span class="systemText">
                                    Lead Agency does not manage pools.
                                </span>
                            }
                        </div>
                    </div>
                </div>
                if (ViewDataTyped.Organization.LeadAgency.CanManageRightOfWayCoverage)
                {
                    <div role="tabpanel" class="tab-pane" id="rightOfWay">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="summarySection" style="min-height: 390px">
                                    <h2>Current Banked Right of Way Coverage</h2>
                                    <div class="contentWrapper">
                                        @if (ViewDataTyped.Organization.LeadAgency.LeadAgencyRightOfWayCoverages.Any())
                                        {
                                            <table class="table table-striped table-condensed" style="width: 400px">
                                                <tr>
                                                    <th>Commodity</th>
                                                    <th colspan="2">Coverage Amount</th>
                                                </tr>
                                                @foreach (var leadAgencyRightOfWayCoverages in ViewDataTyped.Organization.LeadAgency.LeadAgencyRightOfWayCoverages.GroupBy(x => x.DisplayName).OrderBy(x => x.Key))
                                                {
                                                    <tr>
                                                        <td>
                                                            @leadAgencyRightOfWayCoverages.Key
                                                        </td>
                                                        <td style="text-align: right">
                                                            @leadAgencyRightOfWayCoverages.Sum(x => x.RightOfWayCoverageAmount).ToGroupedNumeric()
                                                        </td>
                                                        <td>
                                                            @if (leadAgencyRightOfWayCoverages.First().Commodity.CommodityUnitType == CommodityUnitType.SquareFootage)
                                                            {
                                                                <span>ft<sup>2</sup></span>
                                                            }
                                                            else
                                                            {
                                                                @leadAgencyRightOfWayCoverages.First().Commodity.CommodityUnitType.CommodityUnitTypeDisplayName
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </table>
                                        }
                                        else
                                        {
                                            <span class="systemText">@ViewUtilities.NotAvailableString</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="summarySection">
                                    <h2>Right of Way Details</h2>
                                    <div class="contentWrapper">
                                        @Html.DhtmlxGrid(ViewDataTyped.LeadAgencyDetailsViewData.LeadAgencyRightOfWayCoverageGridSpec, ViewDataTyped.LeadAgencyDetailsViewData.LeadAgencyRightOfWayCoverageGridName, ViewDataTyped.LeadAgencyDetailsViewData.LeadAgencyRightOfWayCoverageGridDataUrl, "height:300px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
                                    </div>
                                </div>

                                <script type="text/javascript">
                                    jQuery(document).ready(function()
                                    {
                                        var hasOnlyOneCommodity = @(ViewDataTyped.Organization.LeadAgency.LeadAgencyRightOfWayCoverages.Select(x => x.DisplayName).Distinct().Count() == 1 ? "true" : "false");

                                        var rightOfWayCoverageGridContainer = Sitka.@ViewDataTyped.LeadAgencyDetailsViewData.LeadAgencyRightOfWayCoverageGridName;
                                        var rightOfWayCoverageGrid = rightOfWayCoverageGridContainer.grid;

                                        var attachTotalFooter = function(showTotal)
                                        {
                                            if (showTotal)
                                            {
                                                rightOfWayCoverageGrid.attachFooter("Total,#cspan,#cspan,{#stat_total},,,,", ["", "", "", "text-align:right", "", "", "", ""]);
                                            }
                                            else
                                            {
                                                rightOfWayCoverageGrid.attachFooter(",,,,,,,");
                                            }
                                            rightOfWayCoverageGrid.setSizes();
                                            rightOfWayCoverageGrid.callEvent("onGridReconstructed", []);
                                        };

                                        rightOfWayCoverageGrid.attachEvent("onXLE", function() { attachTotalFooter(hasOnlyOneCommodity); });
                                        if (!hasOnlyOneCommodity)
                                        {
                                            rightOfWayCoverageGrid.attachEvent("onFilterEnd", function()
                                            {
                                                var footerLabel = rightOfWayCoverageGrid.getFooterLabel(0);
                                                var commodityFilter = this.getFilterElement(2).value;
                                                if (!Sitka.Methods.isUndefinedNullOrEmpty(commodityFilter))
                                                {
                                                    if (footerLabel !== "Total")
                                                    {
                                                        rightOfWayCoverageGrid.detachFooter(0);
                                                        attachTotalFooter(true);
                                                    }
                                                }
                                                else if (footerLabel === "Total")
                                                {
                                                    rightOfWayCoverageGrid.detachFooter(0);
                                                    attachTotalFooter(hasOnlyOneCommodity);
                                                }
                                            });
                                        }
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div style="margin-top: 20px">
    <a class="btn btn-blue" href="@ViewDataTyped.IndexUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Index</a>
</div>

<script type="text/javascript">
    jQuery(document).ready(function()
    {
        var mapInitJson = @Html.Raw(JObject.FromObject(ViewDataTyped.MapInitJson).ToString(Formatting.None));
        var map = new ProjectFirmaMaps.Map(mapInitJson);

        var Legend = new L.Control.Legend({
            position: 'topleft',
            collapsed: false,
            controlButton: {
                title: "Legend"
            }
        });

        map.map.addControl( Legend );
        $(".legend-container").append( $("#legend") );
    });
</script>
