@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.HtmlHelperExtensions
@inherits ProjectFirma.Web.Views.Home.Index

@{ SetLayout(string.Empty, ViewDataTyped);}


<html style="height: 100%">
<head>
    <title>@ViewDataTyped.PageTitle</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    @{ Html.RenderRazorSitkaPartial<LakeTahoeInfoIncludes>(); }

    <link href='@Url.Content("~/Content/CSS/ltinfo-root.theme.min.css")' type='text/css' media='all' rel='stylesheet' id='trpa-screen' />

    <script type="text/javascript">
        try {
            Typekit.load();
        }
        catch (e) {
        }
    </script>

    <style>
        .laketahoeinfo-home {
            background-color: #6680a8;
            background-image: url("/Content/img/South lake Pano3.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            height: auto;
            min-height: 100%;
        }

            .laketahoeinfo-home a, .laketahoeinfo-home p {
                position: relative;
                margin-left: auto;
                margin-right: auto;
                text-decoration: none;
                color: white;
            }

                .laketahoeinfo-home a:hover {
                    text-decoration: underline;
                }

            .laketahoeinfo-home row {
                max-width: 800px;
            }

        #dashboardAdmin {
            width: 100%;
            top: 0;
            z-index: 1000;
            padding-right: 5px;
        }

        .dashboardButton {
            border: none;
            vertical-align: top;
        }

        .laketahoeinfo-area-audience {
            color: #FFFFFF;
            font-size: 16px;
            -webkit-transition: all 200ms linear;
            -moz-transition: all 200ms linear;
            -ms-transition: all 200ms linear;
            -o-transition: all 200ms linear;
            transition: all 200ms linear;
            margin-top: 10px;
        }

        .audience-hover {
            color: white;
            -webkit-transform: scale(1.2);
            -moz-transform: scale(1.2);
            -ms-transform: scale(1.2);
            -o-transform: scale(1.2);
            transform: scale(1.2);
        }

        #ltinfohome-footer {
            height: 300px;
        }

        .circleBackground {
            width: 200px;
            height: 200px;
            background-color: rgba(102, 128, 168, 0.7);
        }

        .bubble
        {
            text-align: center;
        }

        .static-bubble {
            -webkit-transform: translate3d(0, 0, 0);
            -moz-transform: translate3d(0, 0, 0);
            -ms-transform: translate3d(0, 0, 0);
            -o-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
            -webkit-transition: box-shadow 300ms linear, background-color 300ms linear, border 300ms linear;
            -moz-transition: box-shadow 300ms linear, background-color 300ms linear, border 300ms linear;
            -o-transition: box-shadow 300ms linear, background-color 300ms linear, border 300ms linear;
            transition: box-shadow 300ms linear, background-color 300ms linear, border 300ms linear;            
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            -ms-border-radius: 50%;
            -o-border-radius: 50%;
            border-radius: 50%;
            overflow: hidden;
            width: 200px;
            height: 200px;
            margin: 5px 15px 5px 15px;
            display: inline-block;
            text-align: center;
        }

        .static-bubble:hover {
            -webkit-box-shadow: 0 0 0 20px rgba(39, 155, 220, 0.3);
            -moz-box-shadow: 0 0 0 20px rgba(39, 155, 220, 0.3);
            box-shadow: 0 0 0 20px rgba(39, 155, 220, 0.3);
            background-color: rgba(39, 155, 220, 0.7);
            border: 0;
        }

        .static-bubble .static-bubble-contents {
            position: absolute !important;
            top: 50%;
            height: 50px;
            margin-top: -25px;
            left: 0;
            width: 100%;
            font-size: 22px;
            -webkit-transform: translate3d(0, 0, 0);
            -moz-transform: translate3d(0, 0, 0);
            -ms-transform: translate3d(0, 0, 0);
            -o-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
            -webkit-transition: top 300ms linear;
            -moz-transition: top 300ms linear;
            -o-transition: top 300ms linear;
            transition: top 300ms linear;
                       
        }

        .static-bubble:hover .static-bubble-contents, .static-bubble.hover .static-bubble-contents, .static-bubble.visible .static-bubble-contents {
            top: 70px;
        }

        .static-bubble:hover .static-bubble-contents .static-bubble-details, .static-bubble.hover .static-bubble-contents .static-bubble-details, .static-bubble.visible .static-bubble-contents .static-bubble-details {
            margin-top: 0.38462em;
            opacity: 1;
            max-height: 200px;
        }

        .static-bubble-details {
            font-size: 12px;
            -webkit-transform: translate3d(0, 0, 0);
            -moz-transform: translate3d(0, 0, 0);
            -ms-transform: translate3d(0, 0, 0);
            -o-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
            max-height: 0;
            -webkit-transition: max-height 300ms linear, opacity 200ms linear, margin-top 200ms linear;
            -moz-transition: max-height 300ms linear, opacity 200ms linear, margin-top 200ms linear;
            -o-transition: max-height 300ms linear, opacity 200ms linear, margin-top 200ms linear;
            transition: max-height 300ms linear, opacity 200ms linear, margin-top 200ms linear;
            overflow: hidden;
            display: block;
            line-height: 1.4em;
            padding: 2px;
        }

        .static-bubble.hover .static-bubble-details {
            margin-top: 0.38462em;
            max-height: 200px;
        }

        .laketahoeinfo-alert {
            background-color: rgba(0, 174, 239, 0.2) !important;
            border: none !important;
            border-radius: 20px;
            white-space: normal !important;
            padding: 15px;
            margin: 10px 0;
        }

        .laketahoeinfo-intro {
            margin: 10px;
            font-weight: bold;
            text-align: center;
        }

        .dashboard .row {
            width: 100%;
            margin: 0 auto;
            max-width: 1000px;
            *zoom: 1;
        }
    </style>

</head>
<body class="dashboard" style="height:100%">
    <div style="background-color: rgba(0, 0, 0, 0.2); width: 100%; height: 100%; position: absolute;"></div>
    <div class="laketahoeinfo-home" style="padding-bottom: 20px;">

        <div class="row" style="min-height: 100px;">
            <div class="col-sm-6 col-xs-12">
                <a href="@ViewDataTyped.LakeTahoeInfoHomeUrl"><img src="~/Content/img/laketahoeinfo-logo_large.png" alt="Lake Tahoe Info home page" /></a>
            </div>
            <div class="col-sm-6 col-xs-12">
                @{ Html.RenderRazorSitkaPartial<LakeTahoeInfoNavBar, LakeTahoeInfoNavBarViewData>(ViewDataTyped.LakeTahoeInfoNavBarViewData);}
            </div>
        </div>

        <div class="row">
            <div class=" laketahoeinfo-intro col-md-12">
                <p style="font-size: 24px;">Connecting people with information to improve decision making and sustain investments in the Lake Tahoe Basin.</p>
            </div>
        </div>

        <div class="row">

            <div class="bubble col-md-4 col-sm-5">
                <div class="static-bubble">
                    <div class="circleBackground"></div>
                    <div class="static-bubble-contents">
                        <a href="@ViewDataTyped.EipHomeUrl" class="static-bubble-link">
                            EIP Project<br />Tracker
                            <p class="static-bubble-details">Learn about local environmental improvement projects</p>
                        </a>
                    </div>
                </div>
            </div>

            <div class="bubble col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3">
                <div class="static-bubble">
                    <div class="circleBackground"></div>
                    <div class="static-bubble-contents">
                        <a href="@ViewDataTyped.DataCenterUrl" class="static-bubble-link">
                            Data<br />Center
                            <p class="static-bubble-details">Directly access regional data<br />and web services</p>
                        </a>
                    </div>
                </div>
            </div>

        </div>

        <div class="row" style="padding-top: 40px;">
            <div class="col-lg-10 col-lg-offset-1">
                <p style="font-size: 16px; padding-top: 5px; padding-bottom: 10px; text-align: center">
                    This site brought to you by <a href="http://trpa.org">TRPA</a> with funding provided by:
                </p>
            </div>
        </div>
        <div class="row" style="">
            <div class="col-sm-2 col-sm-offset-2" style="text-align: center">
                <a href="http://trpa.org"><img src="\Content\img\funding_org_trpa.png" alt="TRPA" title="Tahoe Regional Planning Agency" style="height: 70px;"></a>
            </div>
            <div class="col-sm-2" style="text-align: center">
                <a href="http://epa.gov"><img src="\Content\img\funding_org_epa.png" alt="EPA" title="US Environmental Protection Agency" style="height: 70px;"></a>
            </div>
            <div class="col-sm-2" style="text-align: center">
                <a href="http://sgc.ca.gov"><img src="\Content\img\funding_org_sgc.png" alt="SGC" title="California Strategic Growth Council" style="height: 70px;"></a>
            </div>
            <div class="col-sm-2" style="text-align: center">
                <a href="http://fs.fed.us"><img src="\Content\img\funding_org_usfs.png" alt="USFS" title="US Forest Service" style="height: 70px;"></a>
            </div>
        </div>
        <div class="row" style="padding-top: 5px;">
            <div class="col-lg-10 col-lg-offset-1">
                <p style="font-size: 10px; padding-top: 25px; margin: 0; text-align: center">
                    In partnership with:
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2 col-sm-offset-4">
                <div style="text-align: center"><a style="margin-right: 20px;" href="http://sitkatech.com">
                    <img src="\Content\img\built_by_sitka.png" alt="Sitka Technology Group" title="Sitka Technology Group" style="height: 50px;">
                </a></div>
            </div>
            <div class="col-sm-2">
                <div style="text-align: center">
                    <a href="http://enviroincentives.com/">
                        <img src="\Content\img\built_by_ei.png" alt="Environmental Incentives" title="Environmental Incentives" style="height: 40px; margin-top: 5px">
                    </a>
                </div>
            </div>
        </div>

    </div>

    <footer id="ltinfohome-footer" class="footer" style="padding-top: 20px;">
        <div class="row">
            <div class="col-lg-12 text-center">
                @{ Html.RenderRazorSitkaPartial<FooterContent>(); }
            </div>
        </div>
    </footer>

    @{ Html.RenderRazorSitkaPartial<LakeTahoeInfoLateLoadingIncludes>(); }

</body>
</html>