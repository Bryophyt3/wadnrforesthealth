@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.TaxonomyTierThree.Edit
@using (Html.BeginForm())
{
    <link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithFieldDefinitionFor(m => m.TaxonomyTierThreeName, MultiTenantHelpers.GetTaxonomyTierThreeDisplayName())</div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.TaxonomyTierThreeName, new { style = "width:522px" })
                @Html.ValidationMessageFor(m => m.TaxonomyTierThreeName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelFor(x => x.ThemeColor, "Theme Color"):
            </div>
            <div class="col-sm-9">
                <div id="themeColorPicker" class="input-group colorpicker-component">
                    @Html.TextBoxFor(x => x.ThemeColor, new { @class = "form-control" })
                    <span class="input-group-addon"><i></i></span>
                    @Html.ValidationMessageFor(x => x.ThemeColor)
                </div>
            </div>
        </div>

    </div>
    @Html.HiddenFor(m => m.TaxonomyTierThreeID)
}

<script type="text/javascript">
    jQuery(document).ready(function () { jQuery("#themeColorPicker").colorpicker(); });
</script>
