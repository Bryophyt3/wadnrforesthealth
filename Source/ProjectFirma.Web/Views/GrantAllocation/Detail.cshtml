@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.ExpenditureAndBudgetControls
@using ProjectFirma.Web.Views.Shared.ProjectControls
@using ProjectFirma.Web.Views.Shared.ProjectLocationControls
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using ProjectFirma.Web.Views.Shared.TextControls
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.ModalDialog
@using MoreLinq
@using ProjectFirma.Web.Views.ProjectFunding
@using ProjectFirma.Web.Views.Shared.ProjectDocument
@using ProjectFirma.Web.Views.Shared.ProjectOrganization
@using ProjectFirma.Web.Views.Shared.ProjectPerson
@inherits ProjectFirma.Web.Views.GrantAllocation.Detail

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
    <script type="text/javascript" src="/Content/Bootstrap-select/bootstrap-select.min.js"></script>
    <link href="~/Content/bootstrap-tags/bootstrap-tags.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/Content/Bootstrap-select/bootstrap-select.min.css" type="text/css" />
    <script src="@Url.Content("~/Content/bootstrap-toc/bootstrap-toc.min.js")" type="text/javascript"></script>
}

<style type="text/css">

    .basicsLayout .row {
         margin-left: 0;
         margin-right: 0;
     }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }

     
</style>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Overview</a>
    </li>
   
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="col-sm-12 col-md-9 col-lg-10">
            <h2 class="sectionHeader">@FieldDefinition.GrantAllocation.GetFieldDefinitionLabel() Overview</h2>
            <div class="row">
                <div class="col-sm-12" style="padding: 0px;">
                    <div class="panel panelFirma">
                        <div class="panel-heading panelTitle">
                            <h3>
                                @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditGrantAllocationUrl, string.Format("Edit {0}", ViewDataTyped.GrantAllocation.ProjectName), 950, ViewDataTyped.UserHasEditGrantPermissions)
                                Basics
                            </h3>
                        </div>
                        <div class="panel-body">
                            <div class="basicsLayout">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="Name">Name</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="Name">@ViewDataTyped.GrantAllocation.ProjectName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="ShortName">Short Name</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="ShortName"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="Status">Status</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="Status">@ViewDataTyped.GrantAllocation.Grant.GrantStatus.GrantStatusName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="Type">Type</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="Type">@ViewDataTyped.GrantAllocation.Grant.GrantTypeDisplay</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="GrantNumber">Grant Number</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="GrantNumber">@ViewDataTyped.GrantAllocation.Grant.GrantNumber</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="ProgramIndex">Program Index (PI)</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="ProgramIndex">@ViewDataTyped.GrantAllocation.ProgramIndexDisplay</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="CFDA">CFDA</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="CFDA">@ViewDataTyped.GrantAllocation.Grant.CFDANumber</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="ProjectCode">Project Code</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="ProjectCode">@ViewDataTyped.GrantAllocation.ProjectCodesString</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="AllocationAmount">Allocation Amount</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="AllocationAmount">@ViewDataTyped.GrantAllocation.AllocationAmount.ToStringCurrency()</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="StartDate">Start Date</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="StartDate">@ViewDataTyped.GrantAllocation.StartDateDisplay</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="EndDate">End Date</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="EndDate">@ViewDataTyped.GrantAllocation.EndDateDisplay</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="FederalFundCode">Federal Fund Code</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <span id="FederalFundCode">@ViewDataTyped.GrantAllocation.FederalFundCodeDisplay</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            
            <div class="row">
                <div class="col-sm-12" style="padding: 0px;">
                    <div class="panel panelFirma">
                        <div class="panel-heading panelTitle">
                            <h3>
                                @*@ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditProjectUrl, string.Format("Edit {0}", ViewDataTyped.Project.DisplayName), 950, ViewDataTyped.UserHasEditProjectPermissions)*@
                                Notes
                            </h3>
                        </div>
                        <div class="panel-body">
                            <div class="basicsLayout">
                                
                                @foreach (var grantAllocationNote in ViewDataTyped.GrantAllocation.GrantAllocationNotes)
                                {
                                    <div class="row">
                                        <strong>@grantAllocationNote.CreatedDate @grantAllocationNote.CreatedByPerson.FullNameFirstLast</strong>
                                    </div>
                                    <div class="row">
                                        @if (grantAllocationNote.GrantAllocationNoteText != "")
                                        {
                                            @grantAllocationNote.GrantAllocationNoteText
                                        }
                                        else
                                        {
                                            <p>No notes available.</p>
                                        }
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








<script type="text/javascript">
                jQuery(document)
                    .ready(function () {
                        jQuery("#home-tab").click();
                    });
            </script>

