@using LtInfo.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Security
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using MoreLinq
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Views.PerformanceMeasure
@inherits ProjectFirma.Web.Views.FocusArea.Detail

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
    <script src="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">

    jQuery(function () {
        jQuery("#overviewTab").on("shown.bs.tab", function () {
            var gridName1 = @(ViewDataTyped.ProjectFocusAreaGridName.ToJS().ToHTMLFormattedString());
            Sitka[gridName1].resizeGridWidths();
            var gridName2 = @(ViewDataTyped.ProjectFundingSourceExpendituresForFocusAreaGridName.ToJS().ToHTMLFormattedString());
            Sitka[gridName2].resizeGridWidths();
            _.forOwn(window.GoogleCharts.chartWrappers,
                function (chartWrapper) {
                    if (jQuery('#' + chartWrapper.getContainerId()).is(':visible')) {
                        chartWrapper.getChart().clearChart();
                        chartWrapper.draw();
                    }
                });
        });
    });
    </script>
}

<div>
    <a class="btn backButton" href="@ViewDataTyped.IndexUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Back to all Focus Areas>
</div>

<div class="container-fluid">
    <div class="row">
        <ul class="nav nav-tabs" id="focusAreaDetailsTabs" style="border-bottom: none;">
            <li class="active">
                <a href="#focusAreaOverview" aria-controls="focusAreaOverview" role="tab" data-toggle="tab" id="overviewTab">Overview</a>
            </li>
        </ul>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="focusAreaOverview">
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditFocusAreaUrl, string.Format("Edit {0} - {1}", "Focus Area", ViewDataTyped.FocusArea.DisplayName), ViewDataTyped.UserHasFocusAreaManagePermissions) Basics
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="row">
                                            <div class="col-xs-6 fieldLabel text-right">@Html.Label("Name")</div>
                                            <div class="col-xs-6">@ViewDataTyped.FocusArea.FocusAreaName</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-6 fieldLabel text-right">@Html.Label("Display Name")</div>
                                            <div class="col-xs-6">@ViewDataTyped.FocusArea.DisplayName</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-6 fieldLabel text-right">@Html.Label("Status")</div>
                                            <div class="col-xs-6">@(ViewDataTyped.FocusArea.FocusAreaStatus != null ? ViewDataTyped.FocusArea.FocusAreaStatus.FocusAreaStatusDisplayName : string.Empty)</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-6 fieldLabel text-right">@Html.Label("Location")</div>
                                            <div class="col-xs-6">@ViewDataTyped.FocusArea.FocusAreaLocation</div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @Html.LabelWithSugarFor(FieldDefinition.FundingSource, LabelWithSugarForExtensions.DisplayStyle.HelpIconOnly)
                                <a href="@ViewDataTyped.ManageFundingSourcesUrl">@FieldDefinition.FundingSource.GetFieldDefinitionLabelPluralized()</a>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @FieldDefinition.ProjectLocation.GetFieldDefinitionLabelPluralized() and Boundary
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @FieldDefinition.Project.GetFieldDefinitionLabelPluralized()
                            </div>
                            <div class="panel-body">
                                <p>
                                    @ViewDataTyped.FocusArea.FocusAreaName is:
                                </p>
                                <ul>
                                    @*@if (ViewDataTyped.TenantHasCanStewardProjectsFocusAreaRelationship)
                                    {
                                        <li>
                                            the <strong>@FieldDefinition.ProjectsStewardFocusAreaRelationshipToProject.GetFieldDefinitionLabel()</strong> for
                                            <strong>@ViewDataTyped.NumberOfStewardedProjects</strong>
                                            @(ViewDataTyped.NumberOfStewardedProjects == 1 ? FieldDefinition.Project.GetFieldDefinitionLabel() : FieldDefinition.Project.GetFieldDefinitionLabelPluralized())
                                        </li>
                                    }*@
                                    <li>
                                        the <strong>Lead Implementer</strong> for
                                        <strong>@ViewDataTyped.NumberOfLeadImplementedProjects</strong>
                                        @(ViewDataTyped.NumberOfLeadImplementedProjects == 1 ? FieldDefinition.Project.GetFieldDefinitionLabel() : FieldDefinition.Project.GetFieldDefinitionLabelPluralized())
                                    </li>
                                    <li>
                                        a contributor to
                                        <strong>@ViewDataTyped.NumberOfProjectsContributedTo</strong>
                                        @(ViewDataTyped.NumberOfProjectsContributedTo == 1 ? FieldDefinition.Project.GetFieldDefinitionLabel() : FieldDefinition.Project.GetFieldDefinitionLabelPluralized())
                                    </li>
                                </ul>
                                @*@Html.DhtmlxGrid(ViewDataTyped.ProjectsIncludingLeadImplementingGridSpec, ViewDataTyped.ProjectFocusAreaGridName, ViewDataTyped.ProjectFocusAreaGridDataUrl, "height:300px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
