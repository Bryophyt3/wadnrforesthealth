@using System.Globalization
@using LtInfo.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Security
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using MoreLinq
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Views.PerformanceMeasure
@inherits ProjectFirma.Web.Views.FocusArea.Detail

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
    <script src="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">

    jQuery(function () {
        jQuery("#overviewTab").on("shown.bs.tab", function () {
            var gridName1 = @(ViewDataTyped.ProjectFocusAreaGridName.ToJS().ToHTMLFormattedString());
            Sitka[gridName1].resizeGridWidths();
            var gridName2 = @(ViewDataTyped.ProjectFundingSourceExpendituresForFocusAreaGridName.ToJS().ToHTMLFormattedString());
            Sitka[gridName2].resizeGridWidths();
            _.forOwn(window.GoogleCharts.chartWrappers,
                function (chartWrapper) {
                    if (jQuery('#' + chartWrapper.getContainerId()).is(':visible')) {
                        chartWrapper.getChart().clearChart();
                        chartWrapper.draw();
                    }
                });
        });
    });
    </script>
}

<div>
    <a class="btn backButton" href="@ViewDataTyped.IndexUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Back to all Focus Areas</a>
</div>


<div class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="focusAreaOverview">
                <div class="row">
                    <div class="col-md-10">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditFocusAreaUrl, string.Format("Edit {0} - {1}", "Focus Area", ViewDataTyped.FocusArea.FocusAreaName), ViewDataTyped.UserHasFocusAreaManagePermissions) Basics
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="row">
                                            <div class="col-xs-3 fieldLabel">@Html.Label("Name")</div>
                                            <div class="col-xs-6">@ViewDataTyped.FocusArea.FocusAreaName</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3 fieldLabel">@Html.Label("Status")</div>
                                            <div class="col-xs-6">@(ViewDataTyped.FocusArea.FocusAreaStatus != null ? ViewDataTyped.FocusArea.FocusAreaStatus.FocusAreaStatusDisplayName : string.Empty)</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3 fieldLabel">@Html.Label("Region")</div>
                                            <div class="col-xs-6">@(ViewDataTyped.FocusArea.Region != null ? ViewDataTyped.FocusArea.Region.RegionName : string.Empty)</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3 fieldLabel">@Html.Label("Planned Footprint Acres")</div>
                                            <div class="col-xs-6">@(ViewDataTyped.FocusArea.PlannedFootprintAcres.HasValue ? ViewDataTyped.FocusArea.PlannedFootprintAcres.Value.ToString() : "None")</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                Focus Area and @FieldDefinition.ProjectLocation.GetFieldDefinitionLabelPluralized()
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="pull-right">
                                            @if (ViewDataTyped.UserHasFocusAreaManagePermissions)
                                            {
                                                <a href="@ViewDataTyped.EditLocationUrl" title="Edit Focus Area Location" class="btn btn-firma">
                                                    @BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-edit blue")
                                                    Edit Location
                                                </a>
                                                if (ViewDataTyped.FocusArea.FocusAreaLocation != null)
                                                {
                                                    @ModalDialogFormHelper.MakeDeleteLink(string.Format("{0} Delete Location", BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-trash")), ViewDataTyped.DeleteFocusAreaLocationUrl, new List<string> { "btn", "btn-firma" }, ViewDataTyped.UserHasFocusAreaManagePermissions)
                                                }
                                            }
                                        </div>
                                        @if (ViewDataTyped.HasSpatialData)
                                        {
                                            <p>
                                                The map displays the @FieldDefinition.FocusArea.GetFieldDefinitionLabel() location, and the locations of any active @FieldDefinition.Project.GetFieldDefinitionLabelPluralized() and @FieldDefinition.Application.GetFieldDefinitionLabelPluralized() that have spatial data.
                                            </p>
                                            if (ViewDataTyped.FocusArea.FocusAreaLocation == null)
                                            {
                                                <p style="font-weight: bold"> The Focus Area, @ViewDataTyped.FocusArea.FocusAreaName, does not have a location set. </p>
                                            }
                                        }

                                        else
                                        {
                                            <p class="systemText">No spatial data associated with this @FieldDefinition.FocusArea.GetFieldDefinitionLabel().</p>
                                        }
                                    </div>
                                    <div class="col-xs-12">
                                        @if (ViewDataTyped.HasSpatialData)
                                        {
                                            <div id="@ViewDataTyped.MapInitJson.MapDivID" style="height: 600px; margin: 5px 0 5px 0">
                                            </div>
                                            <span class="alert" style="font-size: 12px">To zoom, hold down Shift and drag a rectangle.</span>
                                            <script type="text/javascript">
                                                jQuery(document).ready(function() {
                                                    var mapInitJson =
                                                        @Html.Raw(JObject.FromObject(ViewDataTyped.MapInitJson).ToString(Formatting.None));
                                                    var map = new ProjectFirmaMaps.Map(mapInitJson);

                                                    jQuery("#overviewTab").on("shown.bs.tab", function() {
                                                        map.map.invalidateSize();
                                                    });

                                                });
                                            </script>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                @FieldDefinition.Project.GetFieldDefinitionLabelPluralized()
                            </div>
                            <div class="panel-body">
                                @Html.DhtmlxGrid(ViewDataTyped.ProjectsIncludingLeadImplementingGridSpec, ViewDataTyped.ProjectFocusAreaGridName, ViewDataTyped.ProjectFocusAreaGridDataUrl, "height:300px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panelFirma">
                            <div class="panel-heading panelTitle">
                                CLOSEOUT REPORT
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="row">
                                            <div class="col-xs-3"><h4>@ViewDataTyped.FocusArea.FocusAreaName</h4></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3 fieldLabel">Total Footprint Acres - Planned: </div>
                                            <div class="col-xs-6">@(ViewDataTyped.FocusArea.PlannedFootprintAcres.HasValue ? ViewDataTyped.FocusArea.PlannedFootprintAcres.Value.ToString() : "None")</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3 fieldLabel">Total Footprint Acres - Completed: </div>
                                            <div class="col-xs-6">@(ViewDataTyped.FocusArea.PlannedFootprintAcres.HasValue ? ViewDataTyped.FocusArea.TotalCompletedFootprintAcres.ToString() : "None")</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3 fieldLabel">Sum of Project Estimated Total Costs: </div>
                                            <div class="col-xs-6">@(ViewDataTyped.FocusArea.SumOfProjectEstimatedTotalCost.HasValue ? ViewDataTyped.FocusArea.SumOfProjectEstimatedTotalCost.Value.ToString("C", CultureInfo.CurrentCulture) : "None")</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3 fieldLabel">Sum of Project Reported Expendiures: </div>
                                            <div class="col-xs-6">@(ViewDataTyped.FocusArea.SumOfProjectReportedExpenditures.HasValue ? ViewDataTyped.FocusArea.SumOfProjectReportedExpenditures.Value.ToString("C", CultureInfo.CurrentCulture) : "None")</div>
                                        </div>
                                        <div class="row">
                                            <table class="table">
                                                <thead>
                                                <tr>
                                                    <th scope="col" style="border-bottom: none;">Project</th>
                                                    <th scope="col" style="border-bottom: none;">Status</th>
                                                    <th scope="col" style="border-bottom: none;">Footprint Acres</th>
                                                    <th scope="col" style="border-bottom: none;">Estimated Total Cost</th>
                                                    <th scope="col" style="border-bottom: none;">Reported Expenditures</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var project in ViewDataTyped.FocusArea.Projects.OrderBy(x => x.DisplayName))
                                                    {
                                                    <tr >
                                                        <td style="border-top: none;">
                                                            @project.DisplayName
                                                        </td>
                                                        <td style="border-top: none;">
                                                            @project.ProjectStage.ProjectStageDisplayName
                                                        </td>
                                                        <td style="border-top: none;">
                                                            @project.TotalCompletedFootprintAcres
                                                        </td>
                                                        <td style="border-top: none;">
                                                            @(project.EstimatedTotalCost.HasValue ? project.EstimatedTotalCost.Value.ToString("C", CultureInfo.CurrentCulture) : "None")
                                                        </td>
                                                        <td style="border-top: none;">
                                                            @(project.TotalExpenditures.HasValue ? project.TotalExpenditures.Value.ToString("C", CultureInfo.CurrentCulture) : "None")
                                                        </td>
                                                    </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
