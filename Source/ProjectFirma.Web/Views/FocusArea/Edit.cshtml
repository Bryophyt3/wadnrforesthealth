@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using LtInfo.Common.Mvc
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.FocusArea.Edit
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.FocusAreaName)
            </div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.FocusAreaName, new { @class="form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.FocusAreaName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.FocusAreaStatusID)
            </div>
            <div class="col-sm-9">
                @Html.DropDownListFor(m => m.FocusAreaStatusID, ViewDataTyped.FocusAreaStatus, new { @class="form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.FocusAreaStatusID)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.FocusAreaLocation)
            </div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.FocusAreaLocation)
                @Html.ValidationMessageFor(m => m.FocusAreaLocation)
            </div>
        </div>

        
    </div>
    @Html.HiddenFor(m => m.FocusAreaID)
}


<script type="text/javascript">
    jQuery(document).ready(function ()
    {
        HookupCheckIfFormIsDirty(undefined, ".submitProject");
    });
</script>