@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using LtInfo.Common.Mvc
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.FocusArea.Edit
@using (Html.BeginForm())
{
    <p>Add or edit a @FieldDefinition.FocusArea.GetFieldDefinitionLabel() by providing a name, status and region. You will be able to define the @FieldDefinition.FocusArea.GetFieldDefinitionLabel() location and assign Projects to a @FieldDefinition.FocusArea.GetFieldDefinitionLabel() after you add the @FieldDefinition.FocusArea.GetFieldDefinitionLabel() using this form.</p>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.FocusAreaName)
            </div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.FocusAreaName, new { @class = "form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.FocusAreaName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.FocusAreaStatusID)
            </div>
            <div class="col-sm-9">
                @Html.DropDownListFor(m => m.FocusAreaStatusID, ViewDataTyped.FocusAreaStatus, new { @class = "form-control", style = "width:auto" })
                @Html.ValidationMessageFor(m => m.FocusAreaStatusID)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.DNRUplandRegionID)
            </div>
            <div class="col-sm-9">
                @Html.DropDownListFor(m => m.DNRUplandRegionID, ViewDataTyped.Regions, new { @class = "form-control", style = "width:auto" })
                @Html.ValidationMessageFor(m => m.DNRUplandRegionID)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.PlannedFootprintAcres)
            </div>
            <div class="col-sm-9">
                @Html.EditorFor(m => m.PlannedFootprintAcres, new { @class = "form-control", style = "width:auto" })
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.FocusAreaID)
}
