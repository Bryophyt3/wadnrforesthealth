@inherits ProjectFirma.Web.Views.Shared.SortOrder.EditSortOrder

<script src="~/Content/Sortable.js"></script>
<style>
    .sortable-ghost {
        background-color: #E0E0E0;
    }
</style>

<span class="systemText">Drag and drop the @ViewDataTyped.SortableNamePlural to set their sorting order.</span><hr/>
<div id="sortables-list">
    @foreach (var sortable in ViewDataTyped.Sortables.OrderBy(x => x.SortOrder).ToArray())
    {
        <div data-id="@sortable.ID" style="font-size: 14pt; margin-bottom: 2px;"><span class="glyphicon glyphicon-menu-hamburger" style="color: #808080; margin-right: 5px;"></span>
            @sortable.DisplayName
        </div>
    }
</div>

@using (Html.BeginForm())
{
    
}

<script>
    jQuery(document).ready(function () {
        var list = document.getElementById("sortables-list");
        var sortedSortables = Sortable.create(list);/*,
            {
                handle: ".glyphicon-menu-hamburger"
            });*/

        jQuery('#ltinfo-modal-dialog-save-button-id').click(function() {
            var idArray = sortedSortables.toArray();
            var form = jQuery("form");
            for (var i = 0; i < idArray.length; i++) {
                jQuery("<input type='hidden' name='@(Html.NameFor(m=>m.ReorderedSortableIDs))["+i+"]' value=" + idArray[i] + " />").appendTo(form);
            }
        });
    })
</script>