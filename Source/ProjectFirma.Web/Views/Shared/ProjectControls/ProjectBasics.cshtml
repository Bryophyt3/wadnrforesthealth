@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.Views
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.ProjectControls
@inherits ProjectBasics

<style>
    .basicsLayout {
    }

        .basicsLayout .row {
            margin-left: 0;
            margin-right: 0;
        }

            .basicsLayout .row div {
                padding-left: 0;
                padding-right: 5px;
            }

        .basicsLayout hr {
            margin-top: 5px;
            margin-bottom: 5px;
        }
</style>
<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">

    <div class="row">
        <div class="col-xs-12 col-header">
            <label>Project Category</label>
        </div>
    </div>

    @{ ProjectTaxonomy.RenderPartialView(Html, ViewDataTyped.ProjectTaxonomyViewData); }

    <hr />
    <div class="row">
        <div class="col-xs-5 col-header">
            @Html.LabelWithFieldDefinitionWiderFor(FieldDefinition.ProjectStage)
        </div>
        <div class="col-xs-7">
            @ViewDataTyped.Project.ProjectStage.ProjectStageDisplayName
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-header">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectDescription)
        </div>
        <div class="col-xs-7">
            @Html.Raw(ViewDataTyped.Project.ProjectDescription.HtmlEncodeWithBreaks())
        </div>
    </div>

    <hr />

    @switch (ViewDataTyped.Project.FundingType.ToEnum)
    {
        case FundingTypeEnum.Capital:
            <div class="row">
                <div class="col-xs-5 col-header">@Html.LabelWithSugarFor(FieldDefinition.EstimatedTotalCost)</div>
                <div class="col-xs-7">
                    @ViewDataTyped.Project.EstimatedTotalCost.ToStringCurrency()
                </div>
            </div>
            <div class="row">
                <div class="col-xs-5 col-header">
                    @Html.LabelWithSugarFor(FieldDefinition.ProjectCostInYearOfExpenditure)
                </div>
                <div class="col-xs-7">
                    @if (CostParameterSet.CanCalculateCapitalCostInYearOfExpenditure(ViewDataTyped.Project))
                    {
                        <span>@ViewDataTyped.ProjectBasicsCalculatedCosts.CapitalCostInYearOfExpenditure.ToStringCurrency()</span>
                        if (ViewDataTyped.UserHasProjectBudgetManagePermissions)
                        {
                            <span> (<a href="@ViewDataTyped.ProjectBasicsCalculatedCosts.EditInflationUrl">@ViewDataTyped.ProjectBasicsCalculatedCosts.InflationRate.ToStringPercent() annual inflation</a>)</span>
                        }
                        else
                        {
                            <span> (@ViewDataTyped.ProjectBasicsCalculatedCosts.InflationRate.ToStringPercent() annual inflation)</span>
                        }
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-xs-5 col-header">
                    @Html.LabelWithSugarFor(FieldDefinition.SecuredFunding)
                </div>
                <div class="col-xs-7">
                    @ViewDataTyped.Project.SecuredFunding.ToStringCurrency()
                </div><div class="row">
                </div>
                <div class="col-xs-5 col-header">
                    @Html.LabelWithSugarFor(FieldDefinition.UnfundedNeed)
                </div>
                <div class="col-xs-7">
                    @ViewDataTyped.Project.UnfundedNeed.ToStringCurrency()
                </div>
            </div>
                    break;
        case FundingTypeEnum.OperationsAndMaintenance:
        <div class="row">
            <div class="col-xs-5 col-header">
                @Html.LabelWithSugarFor(FieldDefinition.EstimatedAnnualOperatingCost)
            </div>
            <div class="col-xs-7">
                @ViewDataTyped.Project.EstimatedAnnualOperatingCost.ToStringCurrency()
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5 col-header">
                @Html.LabelWithSugarFor(FieldDefinition.CalculatedTotalRemainingOperatingCost)
            </div>
            @if (CostParameterSet.CanCalculateTotalRemainingOperatingCostInYearOfExpenditure(ViewDataTyped.Project))
            {
                <div class="col-xs-7">
                    <span>@ViewDataTyped.ProjectBasicsCalculatedCosts.TotalOperatingCostInYearOfExpenditure.ToStringCurrency()</span>
                    @if (ViewDataTyped.UserHasProjectBudgetManagePermissions)
                    {
                        <span>(For years @ViewDataTyped.ProjectBasicsCalculatedCosts.StartYearForTotalOperatingCostCalculation-@ViewDataTyped.Project.CompletionYear using <a href="@ViewDataTyped.ProjectBasicsCalculatedCosts.EditInflationUrl">@ViewDataTyped.ProjectBasicsCalculatedCosts.InflationRate.ToStringPercent() annual inflation</a>)</span>
                    }
                    else
                    {
                        <span>(For years @ViewDataTyped.ProjectBasicsCalculatedCosts.StartYearForTotalOperatingCostCalculation-@ViewDataTyped.Project.CompletionYear using @ViewDataTyped.ProjectBasicsCalculatedCosts.InflationRate.ToStringPercent() annual inflation)</span>
                    }
                </div>
            }
        </div>
            break;
    }

    <hr />

    <div class="row">
        <div class="col-xs-5 col-header">
            @Html.LabelWithSugarFor(FieldDefinition.PlanningDesignStartYear)
        </div>
        <div class="col-xs-7">
            @ViewDataTyped.Project.PlanningDesignStartYear
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-header">
            @Html.LabelWithSugarFor(FieldDefinition.ImplementationStartYear)
        </div>
        <div class="col-xs-7">
            @ViewDataTyped.Project.ImplementationStartYear
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-header">
            @Html.LabelWithSugarFor(FieldDefinition.CompletionYear)
        </div>
        <div class="col-xs-7">
            @ViewDataTyped.Project.CompletionYear
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-xs-5 col-header">
            @Html.LabelWithSugarFor(FieldDefinition.PrimaryContact)
        </div>

        <div class="col-xs-7">
            @if (ViewDataTyped.Project.PrimaryContactPerson != null)
            {
                <span>
                    @ViewDataTyped.Project.PrimaryContactPerson.FullNameFirstLast (<a href="mailto:@ViewDataTyped.Project.PrimaryContactPerson.Email">@ViewDataTyped.Project.PrimaryContactPerson.Email</a>)
                </span>
            }
            else
            {
                <span>@ViewUtilities.NoneString</span>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-header">
            <label>Attributes</label>
        </div>
        <div class="col-xs-7">
            <ul>
                <li>This project is @(!ViewDataTyped.Project.IsOnActiveProjectsList ? "NOT" : string.Empty) on the Active List</li>
                @if (ViewDataTyped.Project.IsFeatured)
                {
                    <li>This project is a featured project</li>
                }
                @if (ViewDataTyped.Project.FundingType == FundingType.OperationsAndMaintenance)
                {
                    <li>This project is an Operations and Maintenance project with recurring annual costs.</li>
                }
            </ul>
        </div>
    </div>
</div>
