@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.Shared.ProjectImportBlockList.EditProjectImportBlockList


<style>

</style>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    @Html.ValidationSummary()

    <div class="form-group">
        <div class="col-xs-2">
        </div>
        <div class="col-xs-8">
            <p>Prevent projects from being added or updated when their associated program is imported by providing the Project Name or Project GIS Identifier, then providing a remark to explain the exclusion.</p>
        </div>
        <div class="col-xs-2">
        </div>
    </div>


    <div class="form-group">
        <div class="col-xs-4 control-label">@Html.LabelWithSugarFor(m => m.ProjectName)</div>
        <div class="col-xs-8">
            @if (ViewDataTyped.LockIdentifierFields)
            {
                @Html.TextBoxFor(m => m.ProjectName, new { @readonly = "readonly" })
            }
            else
            {
                @Html.TextBoxFor(m => m.ProjectName)
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-4 control-label">@Html.LabelWithSugarFor(m => m.ProjectGisIdentifier)</div>
        <div class="col-xs-8">
            @if (ViewDataTyped.LockIdentifierFields)
            {
                @Html.TextBoxFor(m => m.ProjectGisIdentifier, new { @readonly = "readonly" })
            }
            else
            {
                @Html.TextBoxFor(m => m.ProjectGisIdentifier)
            }

        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-4 control-label">
            @Html.LabelWithSugarFor(m => m.Notes)
        </div>
        <div class="col-xs-8">
            @Html.TextAreaFor(m => m.Notes, 3, 40, new { @maxlength = 500 })
        </div>
    </div>

    @Html.HiddenFor(m => m.ProgramID)

    @Html.HiddenFor(m => m.ProjectID)

</div>

}