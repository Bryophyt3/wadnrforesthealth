@using ProjectFirma.Web.Views.Shared
@inherits ViewPageContent


<div id="@Html.Id(ViewDataTyped.FirmaPageContentID)">
    @if (ViewDataTyped.ShowEditButton)
    {
        <div class="rightFloatingInfo" style="display: none">
            <div style="margin-top: 10px">
                <a class="btn btn-xs btn-firma" href="@ViewDataTyped.EditUrl">Edit</a>
            </div>
        </div>
    }
    @Html.Raw(ViewDataTyped.FirmaPage.FirmaPageContentHtmlString)
</div>

<script>
    jQuery("#@Html.Id(ViewDataTyped.FirmaPageContentID)").hover(function(){
        jQuery(".rightFloatingInfo").fadeIn();
        }
        ,function(){
            jQuery(".rightFloatingInfo").fadeOut();
        }
    );
</script>