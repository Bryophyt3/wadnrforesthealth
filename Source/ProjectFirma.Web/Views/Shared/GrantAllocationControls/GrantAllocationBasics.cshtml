@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.GrantAllocationControls
@inherits GrantAllocationBasics

<style>
    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.GrantAllocationName)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.GrantAllocationName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.Organization)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.Organization.GetDisplayNameAsUrl()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.GrantManager)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.GrantManager.GetFullNameFirstLastAsUrl()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProgramManager)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.GetAllProgramManagerPersonNamesAsUrls()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.GrantStatus)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.Grant.GrantStatus.GrantStatusName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.GrantType)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.Grant.GrantTypeDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.GrantNumber)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.Grant.GrantNumber</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProgramIndex)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.ProgramIndexDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectCode)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.ProjectCodes.ToDistinctOrderedCsvList()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.CFDA)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.Grant.CFDANumber</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.Division)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.DivisionNameDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.Region)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.RegionNameDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.AllocationAmount)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.AllocationAmount.ToStringCurrency()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.GrantStartDate)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.StartDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.GrantEndDate)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.EndDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.FederalFundCode)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.GrantAllocation.FederalFundCodeDisplay</span>
        </div>
    </div>
</div>

