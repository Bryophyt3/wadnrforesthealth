@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.GrantAllocationControls
@inherits GrantAllocationBasics

@functions 
{
    private string GetProgramMangerPersonFullNames(GrantAllocationBasicsViewData viewDataTyped)
    {
        return viewDataTyped.GrantAllocation.GetAllProgramManagerPersonNamesAsString();
    }

}

<style>
    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectName)
        </div>
        <div class="col-sm-9">
            <span id="Name">@ViewDataTyped.GrantAllocation.ProjectName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.Organization)
        </div>
        <div class="col-sm-9">
            <span id="Organization">@ViewDataTyped.OrganizationDisplayName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProgramManager)
        </div>
        <div class="col-sm-9">
            <span id="ProgramManager">@GetProgramMangerPersonFullNames(ViewDataTyped)</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.GrantStatus)
        </div>
        <div class="col-sm-9">
            <span id="Status">@ViewDataTyped.GrantAllocation.Grant.GrantStatus.GrantStatusName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="Type">Type</label>
        </div>
        <div class="col-sm-9">
            <span id="Type">@ViewDataTyped.GrantAllocation.Grant.GrantTypeDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="GrantNumber">Grant Number</label>
        </div>
        <div class="col-sm-9">
            <span id="GrantNumber">@ViewDataTyped.GrantAllocation.Grant.GrantNumber</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="ProjectCode">Project Code</label>
        </div>
        <div class="col-sm-9">
            <span id="ProjectCode">@ViewDataTyped.GrantAllocation.ProjectCodes.ToDistinctOrderedCsvList()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="ProgramIndex">Program Index (PI)</label>
        </div>
        <div class="col-sm-9">
            <span id="ProgramIndex">@ViewDataTyped.GrantAllocation.ProgramIndexDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="CFDA">CFDA</label>
        </div>
        <div class="col-sm-9">
            <span id="CFDA">@ViewDataTyped.GrantAllocation.Grant.CFDANumber</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="ProjectCode">Project Code</label>
        </div>
        <div class="col-sm-9">
            <span id="ProjectCode">@ViewDataTyped.GrantAllocation.ProjectCodes.ToDistinctOrderedCsvList()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="Region">Region</label>
        </div>
        <div class="col-sm-9">
            <span id="Region">@ViewDataTyped.GrantAllocation.RegionNameDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="AllocationAmount">Allocation Amount</label>
        </div>
        <div class="col-sm-9">
            <span id="AllocationAmount">@ViewDataTyped.GrantAllocation.AllocationAmount.ToStringCurrency()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="StartDate">Start Date</label>
        </div>
        <div class="col-sm-9">
            <span id="StartDate">@ViewDataTyped.GrantAllocation.StartDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="EndDate">End Date</label>
        </div>
        <div class="col-sm-9">
            <span id="EndDate">@ViewDataTyped.GrantAllocation.EndDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label for="FederalFundCode">Federal Fund Code</label>
        </div>
        <div class="col-sm-9">
            <span id="FederalFundCode">@ViewDataTyped.GrantAllocation.FederalFundCodeDisplay</span>
        </div>
    </div>
</div>

