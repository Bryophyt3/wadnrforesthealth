@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.InvoiceControls
@inherits InvoiceBasics

@functions 
{
}

<style>
    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.InvoiceID)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.InvoiceID</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.InvoiceIdentifyingName)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.InvoiceIdentifyingName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.RequestorName)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.RequestorName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.InvoiceDate)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.InvoiceDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.PurchaseAuthority)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.PurchaseAuthorityDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.InvoiceStatus)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.InvoiceStatus.InvoiceStatusDisplayName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.TotalRequestedInvoicePaymentAmount)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.TotalPaymentAmount.ToStringCurrency()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.InvoiceApprovalStatus)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.InvoiceApprovalStatus.InvoiceApprovalStatusName</span>
        </div>
    </div>
    @if (ViewDataTyped.Invoice.InvoiceApprovalStatusComment != null)
    {
        <div class="row">
            <div class="col-sm-3">
                @Html.LabelWithSugarFor(FieldDefinition.InvoiceApprovalComment)
            </div>
            <div class="col-sm-9">
                <span>@ViewDataTyped.Invoice.InvoiceApprovalStatusComment</span>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.PreparedByPerson)
        </div>
        <div class="col-sm-9">
            <span>@ViewDataTyped.Invoice.PreparedByPerson.FullNameFirstLast</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.FileResource, "Invoice Voucher File")
        </div>
        <div class="col-sm-9">
            <span>
                @if (ViewDataTyped.ShowDownload)
                {
                    <a href="@ViewDataTyped.Invoice.InvoiceFileResource.FileResourceUrl">
                        @ViewDataTyped.Invoice.InvoiceFileResource.OriginalCompleteFileName
                    </a>
                }
                else
                {
                    <span>No documents uploaded yet.</span>
                }
            </span>
        </div>
    </div>
</div>