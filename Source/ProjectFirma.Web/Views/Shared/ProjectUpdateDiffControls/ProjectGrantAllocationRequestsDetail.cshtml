@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.ProjectUpdateDiffControls
@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@inherits ProjectGrantAllocationRequestsDetail

<table class="summaryLayout">
    <colgroup>
        <col>
        <col>
        <col>
        <col>
    </colgroup>
    <tr>
        <th>@Html.LabelWithSugarFor(FieldDefinition.GrantAllocation)</th>
        <th style="text-align: right">@Html.LabelWithSugarFor(FieldDefinition.SecuredFunding)</th>
        <th style="text-align: right">@Html.LabelWithSugarFor(FieldDefinition.UnsecuredFunding)</th>
        <th style="text-align: right">Total</th>
    </tr>
    @foreach (var grantAllocationRequestAmount in ViewDataTyped.GrantAllocationRequestAmounts.OrderBy(x => x.GrantAllocation.GrantAllocationName))
    {
        <tr class="@grantAllocationRequestAmount.DisplayCssClass">
            <td>@grantAllocationRequestAmount.GrantAllocation.DisplayNameAsUrl</td>
            <td class="@grantAllocationRequestAmount.DisplayCssClass" style="text-align: right">
                <span >@grantAllocationRequestAmount.SecuredAmount.ToStringCurrency()</span>
            </td>
            <td class="@grantAllocationRequestAmount.DisplayCssClass" style="text-align: right">
                <span >@grantAllocationRequestAmount.UnsecuredAmount.ToStringCurrency()</span>
            </td>
            <th style="text-align: right">
                <span >@((grantAllocationRequestAmount.SecuredAmount + grantAllocationRequestAmount.UnsecuredAmount).ToStringCurrency())</span>
            </th>
        </tr>
    }
    @if (ViewDataTyped.GrantAllocationRequestAmounts.Any())
    {
        <tr>
            <th>Total</th>
            <td style="text-align: right">
                <span >@ViewDataTyped.GrantAllocationRequestAmounts.Sum(x => x.SecuredAmount).ToStringCurrency()</span>
            </td>
            <td style="text-align: right">
                <span >@ViewDataTyped.GrantAllocationRequestAmounts.Sum(x => x.UnsecuredAmount).ToStringCurrency()</span>
            </td>
            <th style="text-align: right">
                <span >@ViewDataTyped.GrantAllocationRequestAmounts.Sum(x => x.SecuredAmount + x.UnsecuredAmount).ToStringCurrency()</span>
            </th>
        </tr>
    }
</table>
@if (!ViewDataTyped.GrantAllocationRequestAmounts.Any())
{
    <p class="systemText">No expected funding has been reported for this project.</p>
}
