@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.ProjectControls
@using ProjectFirma.Web.Views.Shared.ProjectLocationControls
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Indicator
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@inherits ProjectFirma.Web.Views.Program.Summary

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }

    <style>
        #@ViewDataTyped.ProjectLocationsMapInitJson.MapDivID
        {
            height: 360px;
        }

        .chartWrapper
        {
            border: 2px black solid;
            box-shadow: 0 2px 2px 0;
        }

    </style>
}

<div class="tableLayout">
    <div class="tableCell">
        <div class="summarySection">
            <h2>@ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditProgramUrl, string.Format("Edit Program - {0}", ViewDataTyped.Program.DisplayName), ViewDataTyped.UserHasProgramManagePermissions) Basics</h2>
            <div class="contentWrapper">
                <span class="stylizeLikeTH">EIP Category:</span>
                @{ ProjectTaxonomy.RenderPartialView(Html, ViewDataTyped.ProjectTaxonomyViewData); }
                <span class="stylizeLikeTH">@Html.LabelWithFieldDefinitionFor(FieldDefinition.AssociatedPrograms):</span>
                @Html.Raw(ViewDataTyped.Program.AssociatedProgramsHtmlString)
            </div>
        </div>

        <div class="summarySection">
            <h2>@ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditDescriptionUrl, string.Format("Edit Description - {0}", ViewDataTyped.Program.DisplayName), ViewDataTyped.UserHasProgramManagePermissions) Description</h2>
            <div class="contentWrapper">
                <div>
                    @ViewDataTyped.Program.ProgramDescriptionHtmlString
                </div>
            </div>
        </div>

        <div class="summarySection">
            <h2>Program Projects Map</h2>
            <div style="padding: 10px">
                To zoom into a specific area, hold down the Shift key and drag a rectangle.
                <div style="border-radius: 8px; background-color: white; margin: 5px 0 5px 0">
                    @{ ProjectLocationsMap.RenderPartialView(Html, ViewDataTyped.ProjectLocationsMapViewData); }
                </div>
                Some projects operate over larger areas and are not represented on the map, but are listed in the project grid below. A <a href="@ViewDataTyped.EipProjectMapFilteredUrl">full-screen, filterable version of this map</a> is also available.
            </div>
        </div>

        <div class="summarySection">
            <h2>
                <a href="@ViewDataTyped.ManageActionPrioritiesUrl">Action Priorities</a>
            </h2>
            <div class="contentWrapper">
                @if (ViewDataTyped.Program.ActionPriorities.Any())
                {
                    <table class="summaryLayout">
                        <tr>
                            <th>@Html.LabelWithFieldDefinitionFor(FieldDefinition.ActionPriority):</th>
                        </tr>
                        @foreach (var actionPriority in ViewDataTyped.Program.ActionPriorities)
                        {
                            <tr>
                                <td>
                                    @actionPriority.GetDisplayNameAsUrl()
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p class="systemText">No action priorities set for this program.</p>
                }
            </div>
        </div>


        <div class="summarySection">
            <h2>
                <a href="@ViewDataTyped.ManageEIPPerformanceMeasuresUrl">Performance Measures</a>
            </h2>
            <div class="contentWrapper">
                @if (ViewDataTyped.ProgramEIPPerformanceMeasures.Any())
                {
                    <table class="summaryLayout">
                        <tr>
                            <th>@Html.LabelWithFieldDefinitionFor(FieldDefinition.EIPPerformanceMeasure):</th>
                        </tr>
                        @foreach (var eipPerformanceMeasure in ViewDataTyped.ProgramEIPPerformanceMeasures.OrderBy(x => x.EIPPerformanceMeasureID))
                        {
                            <tr>
                                <td>
                                    @eipPerformanceMeasure.GetDisplayNameAsUrl()
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p class="systemText">No performance measures set for this program.</p>
                }
            </div>
        </div>
    </div>
    <div class="tableCell" style="width: 620px; padding-top: 20px">
    @foreach (var indicatorChartViewData in ViewDataTyped.IndicatorChartViewDatas)
    {
        IndicatorChart.RenderPartialView(Html, indicatorChartViewData);
    }
    </div>
</div>

<div class="summarySection">
    <h2>
        <a href="@ViewDataTyped.FullProjectListUrl">Projects</a>
    </h2>
    <div class="contentWrapper">
        @Html.DhtmlxGrid(ViewDataTyped.BasicProjectInfoGridSpec, ViewDataTyped.FiveYearListProjectGridName, ViewDataTyped.FiveYearListProjectGridDataUrl, "height:300px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
    </div>
</div>

<div style="margin-top: 20px">
    <a class="btn btn-sm btn-firma" href="@ViewDataTyped.BackUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Index</a>
</div>

<script type="text/javascript">
    jQuery(document).ready(function()
    {
        var projectLocationsMapInitJson = @Html.Raw(JObject.FromObject(ViewDataTyped.ProjectLocationsMapInitJson).ToString(Formatting.None));
        var map = new ProjectFirmaMaps.Map(projectLocationsMapInitJson);
        map.initializeProjectLocations(projectLocationsMapInitJson);
    });
</script>