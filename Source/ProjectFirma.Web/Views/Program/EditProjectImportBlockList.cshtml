@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.Program.EditProjectImportBlockList


<style>

</style>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    @Html.ValidationSummary()

    <div class="form-group">
        <div class="col-xs-12">
            <p>Preemptively prevent projects from being added when this program is imported by providing either/both of the two identifying values below.</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-4 control-label">@Html.LabelWithSugarFor(m => m.ProjectName)</div>
        <div class="col-xs-8">
            @Html.TextBoxFor(m => m.ProjectName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-4 control-label">@Html.LabelWithSugarFor(m => m.ProjectGisIdentifier)</div>
        <div class="col-xs-8">
            @Html.TextBoxFor(m => m.ProjectGisIdentifier)
        </div>
    </div>

    @Html.HiddenFor(m => m.ProgramID)

    @Html.HiddenFor(m => m.ProjectID)

</div>

}