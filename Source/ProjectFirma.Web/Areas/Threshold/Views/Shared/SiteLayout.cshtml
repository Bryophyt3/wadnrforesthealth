@using LtInfo.Common
@inherits ProjectFirma.Web.Areas.Threshold.Views.Shared.SiteLayout

@{
    SetLayout("~/Areas/Threshold/Views/Shared/NavAndHeaderLayout.cshtml", ViewDataTyped);
}

@section JavascriptAndStylesContent
{
    @RenderSection("JavascriptAndStylesContent", false)
}


@if (!string.IsNullOrWhiteSpace(ViewDataTyped.EntityName))
{
    <h3 class="entityName">@ViewDataTyped.EntityName</h3>
}

<div class="rightOfPageTitle">
    @RenderSection("RightOfPageTitle", false)
</div>
<h1 class="pageTitle">@ViewDataTyped.PageTitle</h1>
@if (TempData.ContainsKey(SitkaController.StatusErrorIndex))
{
    <div class="validationWarning">
        @Html.Raw(TempData[SitkaController.StatusErrorIndex])
    </div>
}
@if (TempData.ContainsKey(SitkaController.StatusMessageIndex))
{
    <div class="greenLight">
        @Html.Raw(TempData[SitkaController.StatusMessageIndex])
    </div>
}
@RenderBody()
