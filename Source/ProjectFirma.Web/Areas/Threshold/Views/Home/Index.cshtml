@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Areas.Threshold.Views.Home.Index
@section JavascriptAndStylesContent
{
    <style type="text/css">
        .thresholdCategory {
            text-align: center;
            margin-top: 10px;
            padding-top: 20px;
            padding-bottom: 20px;
            height: 220px;
            border: 2px solid;
            border-radius: 5px;
            margin-right: 10px;
            padding: 5px;
        }

        div.thresholdCategory {
            position: relative;
        }

            div.thresholdCategory a {
                color: white;
                position: absolute;
                width: 100%;
                height: 100%;
                margin-top: 20px;
                top: 0;
                left: 0;
                text-decoration: none;
                z-index: 10;
                filter: alpha(opacity=1);
            }

        .bigger-glyph {
            font-size: 2.5em;
            margin-bottom: 20px;
        }


        .sectionHeader {
            font-size: 1.2em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .sectionDetails {
            font-size: 0.9em;
            color: grey;
        }

        .sustainability-background { background: #6680a8 url("homepage-header-bg.jpg") no-repeat top center; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover; min-height: 540px;  position: relative; }
.sustainability-home {padding-bottom: 10em;}
.sustainability-home .logo-wrapper { text-align: center; }
.sustainability-home .logo-wrapper .logo { padding:  2.5em 1.875em 1.875em; }
.sustainability-home .intro, .sustainability-intro { color: white; text-align: center; margin-top: 3.75em; }
.laketahoeinfo-intro { color: white; text-align: center; }
.laketahoeinfo-intro h1, .sustainability-home .intro h1, .sustainability-intro h1 { font-size: 2.125em; line-height: 1.4em; margin:  0.29412em 0 0.29412em; }
.laketahoeinfo-intro p, .sustainability-home .intro p, .sustainability-intro p { padding:  0 2.5em; color: rgba(255, 255, 255, 0.7); line-height: 1.625em; margin:  0 0 1.25em; }
.sustainability-bubble.bubble-nav ul { margin: 0; padding: 0; text-align: center; }
.sustainability-bubble.bubble-nav ul li { margin: 0; padding: 0; list-style: none; display: inline-block; *display: inline; zoom: 1; }
.sustainability-bubble.bubble-nav .bubble { -webkit-transform: translate3d(0, 0, 0); -moz-transform: translate3d(0, 0, 0); -ms-transform: translate3d(0, 0, 0); -o-transform: translate3d(0, 0, 0); transform: translate3d(0, 0, 0); -webkit-transition: box-shadow 300ms linear; -moz-transition: box-shadow 300ms linear; -o-transition: box-shadow 300ms linear; transition: box-shadow 300ms linear; -webkit-box-shadow: 0 0 0 0 rgba(90, 205, 243, 0.3); -moz-box-shadow: 0 0 0 0 rgba(90, 205, 243, 0.3); box-shadow: 0 0 0 0 rgba(90, 205, 243, 0.3); position: relative; -webkit-border-radius: 8px; -moz-border-radius: 8px; -ms-border-radius: 8px; -o-border-radius: 50%; overflow: hidden; margin: 10px; border-radius: 8px; height: 180px; width: auto;}
.sustainability-bubble.bubble-nav .bubble .thumb { -webkit-backface-visibility: hidden; -moz-backface-visibility: hidden; -ms-backface-visibility: hidden; -o-backface-visibility: hidden; backface-visibility: hidden; display: block; position: relative; background-color: #00aeef; }
.sustainability-bubble.bubble-nav .bubble .thumb .dark-overlay { -webkit-transition: background-color 200ms ease-in-out; -moz-transition: background-color 200ms ease-in-out; -o-transition: background-color 200ms ease-in-out; transition: background-color 200ms ease-in-out; background-color: rgba(0, 0, 0, 0.4); position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
.sustainability-bubble.bubble-nav .bubble .menu { position: absolute; top: 90px; -webkit-transform: translate3d(0, 0, 0); -moz-transform: translate3d(0, 0, 0); -ms-transform: translate3d(0, 0, 0); -o-transform: translate3d(0, 0, 0); transform: translate3d(0, 0, 0); -webkit-transition: top 300ms linear; -moz-transition: top 300ms linear; -o-transition: top 300ms linear; transition: top 300ms linear; margin-top: -0.6875em; left: 0; width: 100%; }
.sustainability-bubble.bubble-nav .bubble .menu a { display: inline-block; *display: inline; zoom: 1; text-decoration: none; color: white; position: relative; }
.sustainability-bubble.bubble-nav .bubble .menu a:before { content: ''; display: block; position: absolute; top: 100%; left: 50%; height: 1px; width: 0; overflow: hidden; background-color: white; background-color: rgba(255, 255, 255, 0.5); }

.sustainability-bubble.bubble-nav .bubble .menu a.parent { text-transform: uppercase; letter-spacing: 0.05em; font-size: 1.125em; line-height: 1.22222em; margin-bottom: 0.11111em; }
.sustainability-bubble.bubble-nav .bubble .menu a.parent:before { display: none; }
.sustainability-bubble.bubble-nav .bubble .menu a.parent:hover { border-bottom-color: transparent; }
.sustainability-bubble.bubble-nav .bubble .menu .subpages { -webkit-transform: translate3d(0, 0, 0); -moz-transform: translate3d(0, 0, 0); -ms-transform: translate3d(0, 0, 0); -o-transform: translate3d(0, 0, 0); transform: translate3d(0, 0, 0); max-height: 0; opacity: 0; -webkit-transition: max-height 300ms linear, opacity 200ms linear, margin-top 200ms linear; -moz-transition: max-height 300ms linear, opacity 200ms linear, margin-top 200ms linear; -o-transition: max-height 300ms linear, opacity 200ms linear, margin-top 200ms linear; transition: max-height 300ms linear, opacity 200ms linear, margin-top 200ms linear; overflow: hidden; }
.sustainability-bubble.bubble-nav .bubble .menu .subpages li { display: block; font-size: 0.8125em; line-height: 1.4em; margin:  0.53846em 0 0; padding-bottom: 1px; }

.sustainability-bubble.bubble-nav .bubble:hover .menu, .sustainability-bubble.bubble-nav .bubble.hover .menu, .sustainability-bubble.bubble-nav .bubble.visible .menu { top: 30px; }
.sustainability-bubble.bubble-nav .bubble:hover .menu .subpages, .sustainability-bubble.bubble-nav .bubble.hover .menu .subpages, .sustainability-bubble.bubble-nav .bubble.visible .menu .subpages { margin-top: 0.38462em; opacity: 1; max-height: 300px; }



            

    </style>
}

<div>
    @ViewDataTyped.ProjectFirmaPage.ProjectFirmaPageContentHtmlString
</div>


<div class="sustainability-bubble bubble-nav">
    <div class="row" style="max-width: 1000px">
        @foreach (var thresholdCategory in ViewDataTyped.ThresholdCategories.OrderBy(x => x.DisplayName))
        {
            <div class="col-md-4 col-sm-6">
                <ul>
                    <li class="bubble thresholdCategory @thresholdCategory.ThemeColor">
                        <div class="thumb">
                            <img src="@thresholdCategory.KeyImageUrlSmall" height="180" alt="" />
                            <a class="dark-overlay" href="@thresholdCategory.GetSummaryUrl()"></a>
                        </div>

                        <ul class="menu">
                            <li>
                                <a href="@thresholdCategory.GetSummaryUrl()" class="parent">@thresholdCategory.DisplayName</a>
                                <ul class="subpages">
                                    <li>
                                        <a href="@thresholdCategory.GetSummaryUrl()">@thresholdCategory.ThresholdCategoryDescription</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        }
    </div>
</div>