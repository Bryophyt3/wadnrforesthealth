@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.Mvc
@inherits ProjectFirma.Web.Areas.Threshold.Views.ThresholdEvaluation.EditMapAndCaption

@using (Html.BeginForm())
{
    if(!ViewDataTyped.ThresholdEvaluation.MapFileResourceID.HasValue)
    {
         <div class="row">
             <div class="col-xs-4 col-sm-4 col-md-3 col-lg-2">
                 Map Image:
             </div>
             <div class="col-xs-6 col-sm-4 col-md-4 col-lg-6">
                 @Html.EditorFor(x => x.FileResourceData)
                 @Html.ValidationMessageFor(x => x.FileResourceData)
             </div>
             <div class="hidden-xs col-sm-4 col-md-4 col-lg-4" style="padding-left: 5px">
                 <span class="smallExplanationText">Allowed Extensions: @Model.GetFileExtensions(x => x.FileResourceData)</span>
             </div>
         </div>
    }
    <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-3 col-lg-2">
            @Html.LabelFor(x => x.MapCaption, "Description"):
        </div>
        <div class="col-xs-6 col-sm-8 col-md-9">
            @Html.TextAreaWithMaxLengthFor(x => x.MapCaption, new TextAreaForExtensions.TextAreaDimensions(null, 2), null)
        </div>
    </div>
}