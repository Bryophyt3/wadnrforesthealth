@inherits ProjectFirma.Web.Areas.Threshold.Views.ThresholdEvaluation.ViewThresholdEvaluationLegend

<style>
    table.statusTrendConfidenceLegend tbody tr th {
        background-color: black;
        color: white;
        text-transform: uppercase;
        padding: 8px;
    }

    table.statusTrendConfidenceLegend tbody tr td {
        padding: 10px;
        text-align: center;
    }

    table.statusTrendConfidenceLegend .statusText {
        color: white;
        text-align: center;
        font-size: 11px;
        height: 100px;
        position: relative;
    }

    table.statusTrendConfidenceLegend .trendText {
        text-align: center;
        font-size: 11px;
    }

</style>
<table class="statusTrendConfidenceLegend" style="width: 750px">
    <tr>
        <th colspan="6">Status</th>
    </tr>
    <tr>
        <td colspan="2">
            <div>ATTAINMENT</div>
            <div style="border: 1px solid #000; padding: 5px">
                <div class="statusTrendConfidence status-ConsiderablyBetter Medium" style="display: inline-block; vertical-align: middle;">
                    <div class="statusText" style="top: 30px">Considerably better<br/>than target
                    </div>
                </div>
                <div class="statusTrendConfidence status-AtOrSomewhatBetter Medium" style="display: inline-block; vertical-align: middle;">
                    <div class="statusText" style="top: 30px">
                        At or<br />somewhat better than target
                    </div>
                </div>
            </div>
        </td>
        <td colspan="2">
            <div>NON-ATTAINMENT</div>
            <div style="border: 1px solid #000; padding: 5px">
                <div class="statusTrendConfidence status-SomewhatWorse Medium" style="vertical-align: middle;">
                    <div class="statusText" style="top: 40px">somewhat worse than target</div>
                </div>
                <div class="statusTrendConfidence status-ConsiderablyWorse Medium" style="vertical-align: middle;">
                    <div class="statusText" style="top: 30px">
                        Considerably<br />worse<br />than target
                    </div>
                </div>
            </div>
        </td>
        <td colspan="2">
            <div class="statusTrendConfidence status-InsufficientData Medium" style="vertical-align: middle;">
                <div class="statusText" style="top: 14px">
                    Insufficient<br/>data to<br/>determine status or no target<br />established
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <th colspan="6">Trend</th>
    </tr>
    <tr>
        <td>
            <div class="statusTrendConfidence Small" style="vertical-align: middle; background-color: #000">
                <a class="trend">
                    <span class="glyphicon RapidImprovement"></span>
                </a>
            </div>
            <br/>
            <span class="trendText">Rapid improvement</span>
        </td>
        <td>
            <div class="statusTrendConfidence Small" style="vertical-align: middle; background-color: #000">
                <a class="trend">
                    <span class="glyphicon ModerateImprovement"></span>
                </a>
            </div>
            <br/>
            <span class="trendText">Moderate improvement</span>
        </td>
        <td>
            <div class="statusTrendConfidence Small" style="vertical-align: middle; background-color: #000">
                <a class="trend">
                    <span class="glyphicon LittleOrNoChange"></span>
                </a>
            </div>
            <br/>
            <span class="trendText">Little or no change</span>
        </td>
        <td>
            <div class="statusTrendConfidence Small" style="vertical-align: middle; background-color: #000">
                <a class="trend">
                    <span class="glyphicon ModerateDecline"></span>
                </a>
            </div>
            <br/>
            <span class="trendText">Moderate decline</span>
        </td>
        <td>
            <div class="statusTrendConfidence Small" style="vertical-align: middle; background-color: #000">
                <a class="trend">
                    <span class="glyphicon RapidDecline"></span>
                </a>
            </div>
            <br/>
            <span class="trendText">Rapid decline</span>
        </td>
        <td>
            <div class="statusTrendConfidence Small" style="vertical-align: middle; background-color: #000">
                <a class="trend">
                    <span class="glyphicon InsufficientData"></span>
                </a>
            </div>
            <br/>
            <span class="trendText">Insufficient data to<br />determine trend</span>
        </td>
    </tr>
</table>

<table class="statusTrendConfidenceLegend table table-condensed" style="width: 750px; margin-bottom: 5px">
    <tr>
        <th colspan="3">Management Indicator Status</th>
    </tr>
    <tr>
        @foreach (var thresholdEvaluationManagementStatusType in ViewDataTyped.ThresholdEvaluationManagementStatusTypes)
        {
            <td>
                <div class="managementStatus @thresholdEvaluationManagementStatusType.ThresholdEvaluationManagementStatusTypeName Small" style="vertical-align: middle;">
                    <div class="statusText managementStatusText" style="font-size: 36px;">@thresholdEvaluationManagementStatusType.ThresholdEvaluationManagementStatusTypeAbbreviation</div>
                </div>
                <br />
                <span class="trendText"> @thresholdEvaluationManagementStatusType.ThresholdEvaluationManagementStatusTypeDisplayName</span>
            </td>
        }
    </tr>
</table>

