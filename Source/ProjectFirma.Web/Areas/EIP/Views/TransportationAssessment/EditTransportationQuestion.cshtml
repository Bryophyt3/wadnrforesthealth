@using LtInfo.Common.HtmlHelperExtensions
@inherits ProjectFirma.Web.Areas.EIP.Views.TransportationAssessment.EditTransportationQuestion
@using (Html.BeginForm())
{
    <table class="dialogFormLayout">        
    <tr>
        <th>@Html.LabelFor(x => x.TransportationQuestionText)</th>
        <td>
            @Html.TextBoxFor(m => m.TransportationQuestionText, new { style = "width:522px" })
            @Html.ValidationMessageFor(m => m.TransportationQuestionText)
        </td>
    </tr>
    <tr>
            <th>@Html.LabelFor(x => x.Archive)</th>
            <td>
               @Html.CheckBoxFor(x => x.Archive)
            </td>
        </tr>        
    </table>
}