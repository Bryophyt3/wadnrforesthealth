@using ProjectFirma.Web.Areas.EIP.Views.ProjectUpdate
@inherits ProjectUpdateBatchDiffLog

<style >#hidden-save-button
 {
     display: none;
 }
    </style>

<div class="overflow-y: auto">
    <div class="summarySection" style="margin-top: 0">
        <h2>
            Project Basics
        </h2>
        @if (ViewDataTyped.ProjectUpdateBatch.BasicsDiffLogHtmlString != null)
        {
            @Html.Raw(ViewDataTyped.ProjectUpdateBatch.BasicsDiffLogHtmlString)
        }
        else
        {
            <div class="contentWrapper">No changes to Basics section</div>
        }
    </div>

    <div class="summarySection">
        <h2>
            Performance Measures
        </h2>
